---
import AboutLayout from "../layouts/AboutLayout.astro";
import { es } from "../utils/translations/esAbout";
import {
  Menu,
  Code,
  GraduationCap,
  Briefcase,
  Sparkles,
  User,
  ExternalLink,
} from "lucide-astro";

const t = es;
---

<AboutLayout>
  <section class="about-hero">
    <div class="hero-content">
      <div class="hero-text">
        <span class="greeting">{t.aboutHero.greeting}</span>
        <h1 class="hero-name">{t.aboutHero.name}</h1>
        <span class="hero-role">{t.aboutHero.role}</span>
        <p class="hero-bio">{t.aboutHero.bio}</p>
      </div>
      <div class="hero-image">
        <img src="/FrysscouLogo.png" alt="Fran Espindola" />
      </div>
    </div>
  </section>

  <section class="about-section" id="experience">
    <div class="section-header">
      <Briefcase size={16} class="header-icon" />
      <h3>{t.sections.workExperience}</h3>
    </div>
    <div class="experience-timeline">
      {
        t.workExperience.toReversed().map((job, index) => (
          <div class="experience-card">
            <div class="exp-header">
              <img src={job.icon} alt={job.company} class="exp-icon" />
              <div class="exp-info">
                <h4>{job.title}</h4>
                <span class="exp-company">{job.company}</span>
              </div>
              <div class="exp-meta">
                <span class="exp-type">{job.type}</span>
                <span class="exp-period">{job.period}</span>
              </div>
            </div>
            <p class="exp-description">{job.description}</p>
            {job.stack && (
              <div class="exp-stack">
                <span class="stack-label">{t.sections.currentStack}:</span>
                <div class="stack-pills">
                  {job.stack.map((tech) => (
                    <span class="tech-pill">{tech}</span>
                  ))}
                </div>
              </div>
            )}
          </div>
        ))
      }
    </div>
  </section>

  <section class="about-section" id="studies">
    <div class="section-header">
      <GraduationCap size={16} class="header-icon" />
      <h3>{t.sections.studies}</h3>
    </div>
    <div class="studies-grid">
      {
        t.studies.map((study) => (
          <div class="study-card">
            <div class="study-header">
              <img
                src={study.icon}
                alt={study.institution}
                class="study-icon"
              />
              <div class="study-info">
                <h4>{study.title}</h4>
                <span class="study-institution">{study.institution}</span>
              </div>
              <span class="study-year">{study.year}</span>
            </div>
            <p class="study-description">{study.description}</p>
          </div>
        ))
      }
    </div>
  </section>

  <section class="about-section" id="projects">
    <div class="section-header">
      <Menu size={16} class="header-icon" />
      <h3>{t.sections.selectedWorks}</h3>
    </div>
    <div class="projects-grid">
      {
        t.projects.map((project) => (
          <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="project-card"
          >
            <div class="project-image">
              <img src={project.image} alt={project.title} loading="lazy" />
            </div>
            <div class="project-content">
              <div class="project-meta">
                <span class="project-year">{project.year}</span>
                {project.isNew && <span class="new-badge">NUEVO</span>}
              </div>
              <h4>{project.title}</h4>
              <p class="project-subtitle">{project.subtitle}</p>
              <div class="project-tech">
                {project.tech.slice(0, 3).map((tech) => (
                  <span>{tech}</span>
                ))}
              </div>
            </div>
            <ExternalLink size={16} class="external-icon" />
          </a>
        ))
      }
    </div>
  </section>

  <section class="about-section" id="facts">
    <div class="section-header">
      <Sparkles size={16} class="header-icon" />
      <h3>{t.sections.funnyFacts}</h3>
    </div>
    <div class="facts-grid">
      {
        t.funnyFacts.map((fact) => (
          <div class="fact-card">
            <span class="fact-emoji">{fact.emoji}</span>
            <span class="fact-text">{fact.text}</span>
          </div>
        ))
      }
    </div>
  </section>
</AboutLayout>

<style>
  :root {
    --about-primary: #376492;
    --about-primary-light: #497eae;
    --about-text: rgba(55, 100, 146, 0.8);
    --about-text-muted: rgba(55, 100, 146, 0.6);
    --about-text-subtle: rgba(55, 100, 146, 0.5);
    --about-border: rgba(55, 100, 146, 0.15);
    --about-border-hover: rgba(55, 100, 146, 0.4);
    --about-bg: rgba(55, 100, 146, 0.03);
    --about-bg-hover: rgba(55, 100, 146, 0.05);
  }
  :global(html.dark) {
    --about-primary: #9fbdda;
    --about-primary-light: #6b9ac5;
    --about-text: rgba(159, 189, 218, 0.8);
    --about-text-muted: rgba(159, 189, 218, 0.6);
    --about-text-subtle: rgba(159, 189, 218, 0.5);
    --about-border: rgba(159, 189, 218, 0.15);
    --about-border-hover: rgba(159, 189, 218, 0.4);
    --about-bg: rgba(159, 189, 218, 0.03);
    --about-bg-hover: rgba(159, 189, 218, 0.05);
  }

  .about-hero {
    padding: 140px 2rem 4rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  .hero-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  .greeting {
    font-family: var(--font-body);
    font-size: 1.1rem;
    color: var(--about-text-muted);
    display: block;
    margin-bottom: 0.5rem;
  }
  .hero-name {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 6vw, 4rem);
    color: var(--about-primary);
    margin: 0 0 0.5rem;
    line-height: 1.1;
  }
  .hero-role {
    font-family: var(--font-body);
    font-size: 1.2rem;
    color: var(--about-primary-light);
    display: inline-block;
    background: rgba(73, 126, 174, 0.15);
    padding: 0.4rem 1rem;
    border-radius: 50px;
    margin-bottom: 1.5rem;
  }
  .hero-bio {
    font-family: var(--font-body);
    font-size: 1.05rem;
    color: var(--about-text);
    line-height: 1.7;
    margin: 0;
  }
  .hero-image {
    display: flex;
    justify-content: center;
  }
  .hero-image img {
    width: 280px;
    height: 280px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid rgba(55, 100, 146, 0.3);
    box-shadow: 0 20px 60px rgba(55, 100, 146, 0.15);
  }

  .about-section {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  .section-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }
  .section-header :global(.header-icon) {
    color: var(--about-primary);
  }
  .section-header h3 {
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--about-primary);
    margin: 0;
  }

  .experience-timeline {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  .experience-card {
    background: var(--about-bg);
    border: 2px solid var(--about-border);
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }
  .experience-card:hover {
    border-color: var(--about-border-hover);
    background: var(--about-bg-hover);
  }
  .exp-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }
  .exp-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(159, 189, 218, 0.3);
  }
  .exp-info {
    flex: 1;
    min-width: 200px;
  }
  .exp-info h4 {
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--about-primary);
    margin: 0 0 0.25rem;
  }
  .exp-company {
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: var(--about-text-muted);
  }
  .exp-meta {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }
  .exp-type {
    font-family: var(--font-body);
    font-size: 0.7rem;
    color: var(--about-primary-light);
    background: rgba(107, 154, 197, 0.15);
    padding: 0.3rem 0.75rem;
    border-radius: 50px;
  }
  .exp-period {
    font-family: var(--font-body);
    font-size: 0.75rem;
    color: var(--about-text-subtle);
  }
  .exp-description {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: var(--about-text);
    line-height: 1.6;
    margin: 0;
  }
  .exp-stack {
    margin-top: 1rem;
  }
  .stack-label {
    font-family: var(--font-body);
    font-size: 0.7rem;
    color: var(--about-text-subtle);
    text-transform: uppercase;
    display: block;
    margin-bottom: 0.5rem;
  }
  .stack-pills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }
  .tech-pill {
    font-family: var(--font-body);
    font-size: 0.65rem;
    color: var(--about-text-muted);
    background: rgba(159, 189, 218, 0.08);
    border: 1px solid var(--about-border);
    padding: 0.25rem 0.6rem;
    border-radius: 50px;
  }

  .studies-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
  }
  .study-card {
    background: var(--about-bg);
    border: 2px solid var(--about-border);
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }
  .study-card:hover {
    border-color: var(--about-border-hover);
  }
  .study-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  .study-icon {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(159, 189, 218, 0.3);
  }
  .study-info {
    flex: 1;
  }
  .study-info h4 {
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: var(--about-primary);
    margin: 0 0 0.2rem;
  }
  .study-institution {
    font-family: var(--font-body);
    font-size: 0.75rem;
    color: var(--about-text-muted);
  }
  .study-year {
    font-family: var(--font-body);
    font-size: 0.65rem;
    color: var(--about-text-subtle);
    background: rgba(159, 189, 218, 0.08);
    padding: 0.3rem 0.6rem;
    border-radius: 50px;
    white-space: nowrap;
  }
  .study-description {
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: var(--about-text-muted);
    line-height: 1.5;
    margin: 0;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
  }
  .project-card {
    position: relative;
    background: var(--about-bg);
    border: 2px solid var(--about-border);
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .project-card:hover {
    border-color: var(--about-border-hover);
    transform: translateY(-3px);
  }
  .project-image {
    height: 140px;
    overflow: hidden;
  }
  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  .project-card:hover .project-image img {
    transform: scale(1.05);
  }
  .project-content {
    padding: 1rem;
  }
  .project-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }
  .project-year {
    font-family: var(--font-body);
    font-size: 0.7rem;
    color: var(--about-text-subtle);
  }
  .new-badge {
    font-family: var(--font-body);
    font-size: 0.55rem;
    background: #9fbdda;
    color: #0a0a0b;
    padding: 0.15rem 0.4rem;
    border-radius: 4px;
    font-weight: bold;
  }
  .project-content h4 {
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--about-primary);
    margin: 0 0 0.25rem;
  }
  .project-subtitle {
    font-family: var(--font-body);
    font-size: 0.75rem;
    color: var(--about-text-muted);
    margin: 0 0 0.75rem;
  }
  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.3rem;
  }
  .project-tech span {
    font-family: var(--font-body);
    font-size: 0.6rem;
    color: var(--about-text-muted);
    border: 1px solid var(--about-border);
    padding: 0.2rem 0.5rem;
    border-radius: 50px;
  }
  .project-card :global(.external-icon) {
    position: absolute;
    top: 1rem;
    right: 1rem;
    color: rgba(159, 189, 218, 0.3);
    opacity: 0;
    transition: all 0.3s ease;
  }
  .project-card:hover :global(.external-icon) {
    opacity: 1;
    color: var(--about-primary);
  }

  .facts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  .fact-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: var(--about-bg);
    border: 2px solid var(--about-border);
    border-radius: 12px;
    padding: 1rem 1.25rem;
    transition: all 0.3s ease;
  }
  .fact-card:hover {
    border-color: var(--about-border-hover);
    background: var(--about-bg-hover);
  }
  .fact-emoji {
    font-size: 1.5rem;
  }
  .fact-text {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: var(--about-text);
  }

  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 2rem;
    }
    .hero-image {
      order: -1;
    }
    .hero-image img {
      width: 180px;
      height: 180px;
    }
    .studies-grid,
    .projects-grid,
    .facts-grid {
      grid-template-columns: 1fr;
    }
    .about-section {
      padding: 3rem 1.5rem;
    }
    .about-hero {
      padding: 120px 1.5rem 3rem;
    }
    .exp-header {
      flex-direction: column;
      align-items: flex-start;
    }
    .exp-meta {
      margin-top: 0.5rem;
    }
  }
</style>
