---
import { translations } from "../i18n/translations.js";
import { workExperience, education } from "../i18n/data.js";
import { Briefcase, GraduationCap } from "lucide-astro";
const t = translations.en;
---

<section id="experience" class="py-32 bg-gray-50/50 relative overflow-x-hidden">
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="text-center mb-16 experience-header opacity-0 translate-y-10">
      <h2
        class="text-4xl md:text-5xl font-[Outfit] font-bold mb-4 text-text-primary"
        data-i18n="experience.title"
      >
        {t.experience.title}
      </h2>
      <p class="text-text-muted text-lg" data-i18n="experience.subtitle">
        {t.experience.subtitle}
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-16">
      <div class="w-full min-w-0">
        <h3
          class="text-xl font-[Outfit] font-semibold text-text-primary mb-8 flex items-center gap-3"
        >
          <span
            class="w-10 h-10 rounded-xl bg-text-primary shrink-0 flex items-center justify-center shadow-lg shadow-text-primary/20"
          >
            <Briefcase class="w-5 h-5 text-white" />
          </span>
          <span data-i18n="experience.work">{t.experience.work}</span>
        </h3>

        <div class="relative">
          <div class="absolute left-6 top-0 bottom-0 w-px bg-gray-200"></div>

          {
            workExperience.map((job) => (
              <div class="experience-item opacity-0 lg:-translate-x-5 translate-y-10 lg:translate-y-0 relative pl-12 sm:pl-16 pb-12 last:pb-0 group w-full">
                <div
                  class={`absolute left-4.5 top-2 w-3 h-3 rounded-full bg-white border-2 z-10 transition-colors duration-300 ${job.isCurrent ? "border-accent" : "border-text-primary"}`}
                />

                <div
                  class={`bg-white rounded-3xl p-5 sm:p-6 border transition-all duration-500 relative w-full ${job.isCurrent ? "border-accent ring-1 ring-accent/30 shadow-2xl shadow-accent-soft/40" : "border-gray-100 group-hover:border-accent group-hover:shadow-xl group-hover:shadow-accent-soft/20"}`}
                >
                  {job.isCurrent && (
                    <div class="absolute -top-3 right-4 sm:right-6 px-3 py-1 bg-accent text-white text-[10px] font-bold rounded-full uppercase tracking-widest shadow-lg shadow-accent/20">
                      Currently
                    </div>
                  )}

                  <div class="flex flex-col sm:flex-row items-start gap-4 mb-4">
                    <div class="w-12 h-12 rounded-xl shrink-0 bg-gray-50 border border-gray-100 overflow-hidden">
                      <img
                        src={job.logo}
                        alt={job.company.en}
                        class="w-full h-full object-cover"
                      />
                    </div>
                    <div class="flex-1 min-w-0 w-full">
                      <div class="flex wrap items-center justify-between gap-2 mb-1">
                        <h4
                          class="text-lg font-[Outfit] font-bold text-text-primary work-company"
                          data-job-id={job.id}
                          data-lang-en={job.company.en}
                          data-lang-es={job.company.es}
                        >
                          {job.company.en}
                        </h4>
                        <span class="text-[10px] font-bold text-text-muted bg-gray-50 px-3 py-1 rounded-full uppercase tracking-wider whitespace-nowrap">
                          {job.period}
                        </span>
                      </div>
                      <p
                        class="text-accent text-sm font-bold work-role"
                        data-job-id={job.id}
                        data-lang-en={job.role.en}
                        data-lang-es={job.role.es}
                      >
                        {job.role.en}
                      </p>
                    </div>
                  </div>

                  <p
                    class="text-text-muted text-sm leading-relaxed work-desc"
                    data-job-id={job.id}
                    data-lang-en={job.description.en}
                    data-lang-es={job.description.es}
                  >
                    {job.description.en}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <div class="w-full min-w-0">
        <h3
          class="text-xl font-[Outfit] font-semibold text-text-primary mb-8 flex items-center gap-3"
        >
          <span
            class="w-10 h-10 rounded-xl bg-accent shrink-0 flex items-center justify-center shadow-lg shadow-accent/20"
          >
            <GraduationCap class="w-5 h-5 text-white" />
          </span>
          <span data-i18n="experience.education">{t.experience.education}</span>
        </h3>

        <div class="relative">
          <div class="absolute left-6 top-0 bottom-0 w-px bg-gray-200"></div>

          {
            education.map((edu) => (
              <div class="education-item opacity-0 lg:translate-x-5 translate-y-10 lg:translate-y-0 relative pl-12 sm:pl-16 pb-12 last:pb-0 group w-full">
                <div class="absolute left-4.5 top-2 w-3 h-3 rounded-full bg-white border-2 border-accent z-10 group-hover:bg-text-primary group-hover:border-text-primary transition-colors duration-300" />

                <div class="bg-white rounded-3xl p-5 sm:p-6 border border-gray-100 group-hover:border-accent group-hover:shadow-xl group-hover:shadow-accent-soft/20 transition-all duration-500 w-full">
                  <div class="flex flex-col sm:flex-row items-start gap-4 mb-2">
                    <div class="w-12 h-12 rounded-xl shrink-0 bg-gray-50 border border-gray-100 overflow-hidden">
                      <img
                        src={edu.logo}
                        alt={edu.institution.en}
                        class="w-full h-full object-cover"
                      />
                    </div>
                    <div class="flex-1 min-w-0 w-full">
                      <div class="flex flex-wrap items-center justify-between gap-2 mb-1">
                        <h4
                          class="text-lg font-[Outfit] font-bold text-text-primary edu-institution"
                          data-edu-id={edu.id}
                          data-lang-en={edu.institution.en}
                          data-lang-es={edu.institution.es}
                        >
                          {edu.institution.en}
                        </h4>
                        <span class="text-[10px] font-bold text-text-muted bg-gray-50 px-3 py-1 rounded-full uppercase tracking-wider whitespace-nowrap">
                          {edu.period}
                        </span>
                      </div>
                      <p
                        class="text-rose-accent text-sm font-bold edu-degree"
                        data-edu-id={edu.id}
                        data-lang-en={edu.degree.en}
                        data-lang-es={edu.degree.es}
                      >
                        {edu.degree.en}
                      </p>
                    </div>
                  </div>

                  <p
                    class="text-text-muted text-sm leading-relaxed edu-desc"
                    data-edu-id={edu.id}
                    data-lang-en={edu.description.en}
                    data-lang-es={edu.description.es}
                  >
                    {edu.description.en}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Media query to check if it's mobile
    const mm = gsap.matchMedia();

    mm.add("(min-width: 1024px)", () => {
      // Desktop animations with translation
      gsap.to(".experience-header", {
        scrollTrigger: {
          trigger: "#experience",
          start: "top 85%",
          toggleActions: "play none none none",
        },
        opacity: 1,
        y: 0,
        duration: 1,
        ease: "power3.out",
      });

      gsap.to(".experience-item", {
        scrollTrigger: {
          trigger: "#experience",
          start: "top 75%",
          toggleActions: "play none none none",
        },
        opacity: 1,
        x: 0,
        duration: 0.6,
        stagger: 0.15,
        ease: "power3.out",
      });

      gsap.to(".education-item", {
        scrollTrigger: {
          trigger: "#experience",
          start: "top 75%",
          toggleActions: "play none none none",
        },
        opacity: 1,
        x: 0,
        duration: 0.6,
        stagger: 0.15,
        ease: "power3.out",
      });
    });

    mm.add("(max-width: 1023px)", () => {
      // Mobile animations WITHOUT horizontal translation to avoid breaking layout
      gsap.to(".experience-header", {
        scrollTrigger: {
          trigger: "#experience",
          start: "top 90%",
          toggleActions: "play none none none",
        },
        opacity: 1,
        y: 0,
        duration: 1,
        ease: "power3.out",
      });

      gsap.to(".experience-item", {
        scrollTrigger: {
          trigger: "#experience",
          start: "top 85%",
          toggleActions: "play none none none",
        },
        opacity: 1,
        y: 0,
        x: 0, // Reset x to 0
        duration: 0.6,
        stagger: 0.1,
        ease: "power3.out",
      });

      gsap.to(".education-item", {
        scrollTrigger: {
          trigger: "#experience",
          start: "top 85%",
          toggleActions: "play none none none",
        },
        opacity: 1,
        y: 0,
        x: 0, // Reset x to 0
        duration: 0.6,
        stagger: 0.1,
        ease: "power3.out",
      });
    });
  });
</script>
