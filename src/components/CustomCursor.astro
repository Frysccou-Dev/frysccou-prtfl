<div
  id="custom-cursor"
  class="custom-cursor pointer-events-none fixed top-0 left-0 z-9999 opacity-0"
>
  <div class="cursor-inner relative flex items-center justify-center">
    <!-- El "punto" central -->
    <div
      class="w-1.5 h-1.5 bg-text-primary rotate-45 transform transition-transform duration-300"
    >
    </div>
    <!-- El "marco" exterior -->
    <div
      class="absolute w-8 h-8 border border-accent rotate-45 transform transition-all duration-500 ease-out opacity-50"
    >
    </div>
    <!-- Decoraci칩n -->
    <div
      class="absolute -top-1 -right-1 w-1 h-1 bg-rose-accent rounded-full scale-0 transition-transform duration-300 corner-dot"
    >
    </div>
  </div>
</div>

<style>
  .custom-cursor {
    mix-blend-mode: difference;
    transition: opacity 0.3s ease;
    will-change: transform;
    pointer-events: none;
  }

  /* Ocultar en dispositivos t치ctiles o sin hover */
  @media (hover: none) and (pointer: coarse) {
    #custom-cursor {
      display: none !important;
    }
  }

  /* Mostrar solo si el dispositivo soporta hover fino */
  @media (hover: hover) and (pointer: fine) {
    #custom-cursor {
      display: block;
    }
  }

  .cursor-active .cursor-inner div:first-child {
    transform: rotate(225deg) scale(0.5);
    background-color: var(--color-accent);
  }

  .cursor-active .cursor-inner div:nth-child(2) {
    transform: rotate(225deg) scale(1.5);
    border-color: var(--color-rose-accent);
    opacity: 1;
  }

  .cursor-active .corner-dot {
    transform: scale(1);
  }
</style>

<script>
  import gsap from "gsap";

  const cursor = document.getElementById("custom-cursor");

  // Detecci칩n inicial de mouse solo en dispositivos no t치ctiles
  let hasMouseMoved = false;

  if (
    cursor &&
    window.matchMedia("(hover: hover) and (pointer: fine)").matches
  ) {
    window.addEventListener("mousemove", (e) => {
      // Solo mostramos el cursor una vez que el usuario mueve el mouse
      if (!hasMouseMoved) {
        cursor.style.opacity = "1";
        hasMouseMoved = true;
      }

      gsap.to(cursor, {
        x: e.clientX,
        y: e.clientY,
        duration: 0.1,
        ease: "power2.out",
      });
    });

    // Efecto interactivo al pasar por encima de elementos clickeables
    const clickables = document.querySelectorAll('a, button, [role="button"]');

    clickables.forEach((el) => {
      el.addEventListener("mouseenter", () => {
        cursor.classList.add("cursor-active");
      });
      el.addEventListener("mouseleave", () => {
        cursor.classList.remove("cursor-active");
      });
    });
  }
</script>
