---
import { translations } from "../i18n/translations.js";
import { ChevronRight } from "lucide-astro";
const t = translations.en;
---

<nav
  id="main-nav"
  class="fixed top-0 left-0 w-full z-50 transition-all duration-700 ease-[cubic-bezier(0.23,1,0.32,1)] flex justify-center pointer-events-none"
>
  <div
    id="nav-container"
    class="bg-white w-full px-6 py-4 flex items-center justify-between transition-all duration-700 ease-[cubic-bezier(0.23,1,0.32,1)] border-b border-gray-100 pointer-events-auto"
  >
    <a
      href="#"
      class="text-xl md:text-2xl font-[Outfit] font-bold text-text-primary hover:text-accent transition-all duration-300 group flex items-center gap-1"
    >
      <span class="group-hover:tracking-wider transition-all duration-500"
        >Frysccou</span
      >
      <span
        class="text-accent group-hover:rotate-12 transition-transform duration-300"
        >.</span
      >
    </a>

    <div
      class="hidden md:flex items-center gap-6 lg:gap-8 bg-white/50 px-6 py-2 rounded-xl border border-white/40 shadow-sm"
    >
      <a href="#about" class="nav-item group relative" data-i18n="nav.about">
        <span
          class="text-text-muted text-xs font-bold uppercase tracking-widest group-hover:text-accent transition-colors duration-300"
          >{t.nav.about}</span
        >
        <span
          class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent group-hover:w-full transition-all duration-300"
        ></span>
      </a>
      <a href="#skills" class="nav-item group relative" data-i18n="nav.skills">
        <span
          class="text-text-muted text-xs font-bold uppercase tracking-widest group-hover:text-accent transition-colors duration-300"
          >{t.nav.skills}</span
        >
        <span
          class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent group-hover:w-full transition-all duration-300"
        ></span>
      </a>
      <a
        href="#projects"
        class="nav-item group relative"
        data-i18n="nav.projects"
      >
        <span
          class="text-text-muted text-xs font-bold uppercase tracking-widest group-hover:text-accent transition-colors duration-300"
          >{t.nav.projects}</span
        >
        <span
          class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent group-hover:w-full transition-all duration-300"
        ></span>
      </a>
      <a
        href="#marketplace"
        class="nav-item group relative"
        data-i18n="nav.marketplace"
      >
        <div class="absolute -top-4 -right-1 flex items-center">
          <span class="relative flex h-2 w-2 mr-1">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent opacity-75"
            ></span>
            <span
              class="relative inline-flex rounded-full h-2 w-2 bg-rose-accent"
            ></span>
          </span>
          <span
            class="text-[8px] font-black italic text-white uppercase tracking-tighter bg-linear-to-r from-accent to-rose-accent px-1 rounded-sm shadow-sm group-hover:scale-110 transition-transform duration-300"
            >HOT</span
          >
        </div>
        <span
          class="text-text-muted text-xs font-bold uppercase tracking-widest group-hover:text-accent transition-colors duration-300"
          >{t.nav.marketplace}</span
        >
        <span
          class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent group-hover:w-full transition-all duration-300"
        ></span>
      </a>
      <a
        href="#contact"
        class="nav-item group relative"
        data-i18n="nav.contact"
      >
        <span
          class="text-text-muted text-xs font-bold uppercase tracking-widest group-hover:text-accent transition-colors duration-300"
          >{t.nav.contact}</span
        >
        <span
          class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent group-hover:w-full transition-all duration-300"
        ></span>
      </a>
    </div>

    <div class="flex items-center gap-3">
      <button
        id="lang-toggle"
        class="flex items-center gap-2 px-4 py-2 rounded-xl bg-gray-900 text-white hover:bg-accent transition-all duration-300 text-[10px] font-bold tracking-widest uppercase shadow-lg shadow-black/10"
      >
        <span id="current-lang">EN</span>
      </button>

      <button
        id="mobile-menu-btn"
        class="md:hidden w-10 h-10 flex flex-col items-center justify-center gap-1.5 bg-gray-100 rounded-xl hover:bg-gray-200 transition-colors group"
      >
        <span
          class="w-5 h-0.5 bg-text-primary group-hover:bg-accent transition-all duration-300 origin-center"
          id="bar1"></span>
        <span
          class="w-5 h-0.5 bg-text-primary group-hover:bg-accent transition-all duration-300"
          id="bar2"></span>
        <span
          class="w-5 h-0.5 bg-text-primary group-hover:bg-accent transition-all duration-300 origin-center"
          id="bar3"></span>
      </button>
    </div>
  </div>

  <div
    id="mobile-menu"
    class="fixed top-24 left-0 w-full opacity-0 pointer-events-none transition-all duration-500 scale-95 origin-top"
  >
    <div
      class="mx-6 p-4 bg-white/90 backdrop-blur-2xl rounded-3xl border border-gray-100 shadow-2xl flex flex-col gap-2"
    >
      <a
        href="#about"
        class="mobile-nav-link p-4 rounded-xl hover:bg-accent-soft hover:text-accent text-text-primary font-bold transition-all duration-300 flex items-center justify-between group"
        data-i18n="nav.about"
      >
        {t.nav.about}
        <ChevronRight
          class="w-5 h-5 opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-300"
          stroke-width={2.5}
        />
      </a>
      <a
        href="#skills"
        class="mobile-nav-link p-4 rounded-xl hover:bg-accent-soft hover:text-accent text-text-primary font-bold transition-all duration-300 flex items-center justify-between group"
        data-i18n="nav.skills"
      >
        {t.nav.skills}
        <ChevronRight
          class="w-5 h-5 opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-300"
          stroke-width={2.5}
        />
      </a>
      <a
        href="#projects"
        class="mobile-nav-link p-4 rounded-xl hover:bg-accent-soft hover:text-accent text-text-primary font-bold transition-all duration-300 flex items-center justify-between group"
        data-i18n="nav.projects"
      >
        {t.nav.projects}
        <ChevronRight
          class="w-5 h-5 opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-300"
          stroke-width={2.5}
        />
      </a>
      <a
        href="#marketplace"
        class="mobile-nav-link p-4 rounded-xl hover:bg-accent-soft hover:text-accent text-text-primary font-bold transition-all duration-300 flex items-center justify-between group"
        data-i18n="nav.marketplace"
      >
        <div class="flex items-center gap-2">
          {t.nav.marketplace}
          <span
            class="inline-flex items-center px-1.5 py-0.5 rounded-sm text-[8px] font-black bg-linear-to-r from-accent to-rose-accent text-white leading-none"
            >HOT</span
          >
        </div>
        <ChevronRight
          class="w-5 h-5 opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-300"
          stroke-width={2.5}
        />
      </a>
      <a
        href="#contact"
        class="mobile-nav-link p-4 rounded-xl hover:bg-accent-soft hover:text-accent text-text-primary font-bold transition-all duration-300 flex items-center justify-between group"
        data-i18n="nav.contact"
      >
        {t.nav.contact}
        <ChevronRight
          class="w-5 h-5 opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-300"
          stroke-width={2.5}
        />
      </a>
    </div>
  </div>
</nav>

<script>
  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const bar1 = document.getElementById("bar1");
  const bar2 = document.getElementById("bar2");
  const bar3 = document.getElementById("bar3");

  let isOpen = false;

  function toggleMenu() {
    isOpen = !isOpen;
    if (isOpen) {
      mobileMenu?.classList.remove(
        "opacity-0",
        "scale-95",
        "pointer-events-none",
      );
      mobileMenu?.classList.add("opacity-100", "scale-100");
      if (bar1) bar1.style.transform = "rotate(45deg) translateY(7px)";
      if (bar2) bar2.style.opacity = "0";
      if (bar3) bar3.style.transform = "rotate(-45deg) translateY(-7px)";
    } else {
      mobileMenu?.classList.add("opacity-0", "scale-95", "pointer-events-none");
      mobileMenu?.classList.remove("opacity-100", "scale-100");
      if (bar1) bar1.style.transform = "none";
      if (bar2) bar2.style.opacity = "1";
      if (bar3) bar3.style.transform = "none";
    }
  }

  mobileMenuBtn?.addEventListener("click", toggleMenu);

  document.querySelectorAll("#mobile-menu a").forEach((link) => {
    link.addEventListener("click", () => {
      toggleMenu();
    });
  });

  window.addEventListener("scroll", () => {
    const nav = document.getElementById("main-nav");
    const container = document.getElementById("nav-container");
    const isScrolled = window.scrollY > 60;

    if (isScrolled) {
      nav?.classList.add("top-6", "px-6");
      container?.classList.add(
        "max-w-5xl",
        "rounded-2xl",
        "bg-white/70",
        "backdrop-blur-xl",
        "border-white/40",
        "shadow-2xl",
        "py-3",
      );
      container?.classList.remove(
        "bg-white",
        "py-4",
        "border-b",
        "border-gray-100",
      );
    } else {
      nav?.classList.remove("top-6", "px-6");
      container?.classList.remove(
        "max-w-5xl",
        "rounded-2xl",
        "bg-white/70",
        "backdrop-blur-xl",
        "border-white/40",
        "shadow-2xl",
        "py-3",
      );
      container?.classList.add(
        "bg-white",
        "py-4",
        "border-b",
        "border-gray-100",
      );
    }
  });
</script>
