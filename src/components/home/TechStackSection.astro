---
import { Code } from "lucide-astro";
import { en } from "../../utils/translations/en";
import { es } from "../../utils/translations/es";
import { pt } from "../../utils/translations/pt";

interface Props {
  lang?: "en" | "es" | "pt";
}

const { lang = "en" } = Astro.props;

const translations = { en, es, pt };
const t = translations[lang];

const coreLanguages = [
  { name: "HTML", icon: "html" },
  { name: "CSS", icon: "css" },
  { name: "JavaScript", icon: "js" },
  { name: "TypeScript", icon: "ts" },
  { name: "Java", icon: "java" },
  { name: "Python", icon: "python" },
  { name: "PHP", icon: "php" },
];

const frontendFrameworks = [
  { name: "React", icon: "react" },
  { name: "Vue", icon: "vue" },
  { name: "Angular", icon: "angular" },
  { name: "Gatsby", icon: "gatsby" },
];

const backendFrameworks = [
  { name: "Node.js", icon: "nodejs" },
  { name: "NestJS", icon: "nestjs" },
  { name: "Spring Boot", icon: "spring" },
  { name: "Django", icon: "django" },
  { name: "FastAPI", icon: "fastapi" },
  { name: "Laravel", icon: "laravel" },
];

const fullStackMeta = [
  { name: "Next.js", icon: "nextjs" },
  { name: "Nuxt.js", icon: "nuxt" },
  { name: "Astro", icon: "astro" },
];

const stylingDesign = [
  { name: "TailwindCSS", icon: "tailwind" },
  { name: "Sass", icon: "sass" },
  { name: "Bootstrap", icon: "bootstrap" },
  { name: "Figma", icon: "figma" },
  { name: "Photoshop", icon: "ps" },
];

const databases = [
  { name: "MongoDB", icon: "mongodb" },
  { name: "Supabase", icon: "supabase" },
  { name: "Firebase", icon: "firebase" },
  { name: "MySQL", icon: "mysql" },
  { name: "PostgreSQL", icon: "postgres" },
];

const toolsDevops = [
  { name: "Docker", icon: "docker" },
  { name: "GitHub", icon: "github" },
  { name: "Git", icon: "git" },
];
---

<section class="tech-section" id="tech">
  <div class="section-header">
    <Code size={16} class="header-icon" />
    <h3>{t.sections.techStack}</h3>
  </div>

  <div class="tech-grid">
    <div class="tech-card full">
      <div class="card-header">
        <span class="card-emoji">üç£</span>
        <span class="card-title">{t.sections.coreLanguages}</span>
      </div>
      <div class="icons-container">
        {
          coreLanguages.map((tech) => (
            <img
              src={`https://skillicons.dev/icons?i=${tech.icon}`}
              alt={tech.name}
              title={tech.name}
              class="tech-icon"
            />
          ))
        }
      </div>
    </div>

    <div class="tech-card full frameworks">
      <div class="card-header">
        <span class="card-emoji">üíª</span>
        <span class="card-title">{t.sections.frameworksLibraries}</span>
      </div>

      <div class="framework-sections">
        <div class="framework-block">
          <span class="framework-label">{t.sections.frontendFrameworks}</span>
          <div class="icons-container">
            {
              frontendFrameworks.map((tech) => (
                <img
                  src={`https://skillicons.dev/icons?i=${tech.icon}`}
                  alt={tech.name}
                  title={tech.name}
                  class="tech-icon"
                />
              ))
            }
          </div>
        </div>

        <div class="framework-block">
          <span class="framework-label">{t.sections.backendFrameworks}</span>
          <div class="icons-container">
            {
              backendFrameworks.map((tech) => (
                <img
                  src={`https://skillicons.dev/icons?i=${tech.icon}`}
                  alt={tech.name}
                  title={tech.name}
                  class="tech-icon"
                />
              ))
            }
          </div>
        </div>

        <div class="framework-block">
          <span class="framework-label">{t.sections.fullStackMeta}</span>
          <div class="icons-container">
            {
              fullStackMeta.map((tech) => (
                <img
                  src={`https://skillicons.dev/icons?i=${tech.icon}`}
                  alt={tech.name}
                  title={tech.name}
                  class="tech-icon"
                />
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <div class="tech-card">
      <div class="card-header">
        <span class="card-emoji">‚ú®</span>
        <span class="card-title">{t.sections.stylingDesign}</span>
      </div>
      <div class="icons-container">
        {
          stylingDesign.map((tech) => (
            <img
              src={`https://skillicons.dev/icons?i=${tech.icon}`}
              alt={tech.name}
              title={tech.name}
              class="tech-icon"
            />
          ))
        }
      </div>
    </div>

    <div class="tech-card">
      <div class="card-header">
        <span class="card-emoji">üíæ</span>
        <span class="card-title">{t.sections.databases}</span>
      </div>
      <div class="icons-container">
        {
          databases.map((tech) => (
            <img
              src={`https://skillicons.dev/icons?i=${tech.icon}`}
              alt={tech.name}
              title={tech.name}
              class="tech-icon"
            />
          ))
        }
      </div>
    </div>

    <div class="tech-card full">
      <div class="card-header">
        <span class="card-emoji">üõ†Ô∏è</span>
        <span class="card-title">{t.sections.toolsDevops}</span>
      </div>
      <div class="icons-container center">
        {
          toolsDevops.map((tech) => (
            <img
              src={`https://skillicons.dev/icons?i=${tech.icon}`}
              alt={tech.name}
              title={tech.name}
              class="tech-icon"
            />
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .tech-section {
    padding: 4rem 3rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .section-header :global(.header-icon) {
    color: #9fbdda;
  }

  .section-header h3 {
    font-family: var(--font-body);
    font-size: 1rem;
    color: #9fbdda;
    margin: 0;
  }

  .tech-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .tech-card {
    background: transparent;
    border: 2px solid rgba(159, 189, 218, 0.3);
    border-radius: 15px;
    padding: 1.5rem 2rem;
    transition: all 0.3s ease;
  }

  .tech-card:hover {
    background: rgba(159, 189, 218, 0.08);
    border-color: rgba(159, 189, 218, 0.6);
  }

  .tech-card.full {
    grid-column: 1 / -1;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .card-emoji {
    font-size: 1.1rem;
  }

  .card-title {
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: #9fbdda;
  }

  .icons-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .icons-container.center {
    justify-content: center;
  }

  .tech-icon {
    width: 44px;
    height: 44px;
    transition: transform 0.2s ease;
    cursor: pointer;
  }

  .tech-icon:hover {
    transform: scale(1.15) translateY(-4px);
  }

  .tech-card.frameworks {
    padding-bottom: 2rem;
  }

  .framework-sections {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .framework-block {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .framework-label {
    font-family: var(--font-body);
    font-size: 0.75rem;
    color: rgba(159, 189, 218, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 1024px) {
    .framework-sections {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .tech-section {
      padding: 3rem 1.5rem;
    }

    .tech-grid {
      grid-template-columns: 1fr;
    }

    .tech-card {
      padding: 1.25rem 1.5rem;
    }

    .tech-icon {
      width: 40px;
      height: 40px;
    }
  }
</style>
