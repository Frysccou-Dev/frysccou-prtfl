---
import { Code } from "lucide-astro";
import { en } from "../../utils/translations/en";
import { es } from "../../utils/translations/es";
import { pt } from "../../utils/translations/pt";

interface Props {
  lang?: "en" | "es" | "pt";
}

const { lang = "en" } = Astro.props;

const translations = { en, es, pt };
const t = translations[lang];

const mainStack = [
  { name: "Next.js", icon: "nextjs" },
  { name: "Nuxt", icon: "nuxt" },
  { name: "TypeScript", icon: "ts" },
  { name: "TailwindCSS", icon: "tailwind" },
  { name: "Supabase", icon: "supabase" },
  { name: "Node.js", icon: "nodejs" },
];

const frontend = [
  { name: "HTML", icon: "html" },
  { name: "CSS", icon: "css" },
  { name: "JavaScript", icon: "js" },
  { name: "TypeScript", icon: "ts" },
  { name: "React", icon: "react" },
  { name: "Vue", icon: "vue" },
  { name: "Angular", icon: "angular" },
  { name: "Next.js", icon: "nextjs" },
  { name: "Nuxt", icon: "nuxt" },
  { name: "TailwindCSS", icon: "tailwind" },
  { name: "Sass", icon: "sass" },
];

const backend = [
  { name: "Node.js", icon: "nodejs" },
  { name: "Nest.js", icon: "nestjs" },
  { name: "PHP", icon: "php" },
  { name: "Laravel", icon: "laravel" },
  { name: "Java", icon: "java" },
  { name: "Spring", icon: "spring" },
  { name: "Python", icon: "python" },
  { name: "Django", icon: "django" },
  { name: "Flask", icon: "flask" },
];

const databases = [
  { name: "MongoDB", icon: "mongodb" },
  { name: "PostgreSQL", icon: "postgres" },
  { name: "MySQL", icon: "mysql" },
  { name: "Supabase", icon: "supabase" },
  { name: "Firebase", icon: "firebase" },
];

const tools = [
  { name: "Git", icon: "git" },
  { name: "GitHub", icon: "github" },
  { name: "Docker", icon: "docker" },
  { name: "Figma", icon: "figma" },
];
---

<section class="tech-section" id="tech">
  <div class="section-header">
    <Code size={16} class="header-icon" />
    <h3>{t.sections.techStack}</h3>
  </div>

  <div class="main-stack">
    <span class="subsection-title">{t.sections.mainStack}</span>
    <div class="main-stack-grid">
      {
        mainStack.map((tech) => (
          <div class="tech-card main">
            <img
              src={`https://skillicons.dev/icons?i=${tech.icon}`}
              alt={tech.name}
              class="tech-icon"
            />
            <span class="tech-name">{tech.name}</span>
          </div>
        ))
      }
    </div>
  </div>

  <div class="tech-categories">
    <div class="category">
      <span class="category-title">{t.sections.frontend}</span>
      <div class="category-icons">
        {
          frontend.map((tech) => (
            <img
              src={`https://skillicons.dev/icons?i=${tech.icon}`}
              alt={tech.name}
              class="category-icon"
              title={tech.name}
            />
          ))
        }
      </div>
    </div>

    <div class="category">
      <span class="category-title">{t.sections.backend}</span>
      <div class="category-icons">
        {
          backend.map((tech) => (
            <img
              src={`https://skillicons.dev/icons?i=${tech.icon}`}
              alt={tech.name}
              class="category-icon"
              title={tech.name}
            />
          ))
        }
      </div>
    </div>

    <div class="category">
      <span class="category-title">{t.sections.databases}</span>
      <div class="category-icons">
        {
          databases.map((tech) => (
            <img
              src={`https://skillicons.dev/icons?i=${tech.icon}`}
              alt={tech.name}
              class="category-icon"
              title={tech.name}
            />
          ))
        }
      </div>
    </div>

    <div class="category">
      <span class="category-title">{t.sections.tools}</span>
      <div class="category-icons">
        {
          tools.map((tech) => (
            <img
              src={`https://skillicons.dev/icons?i=${tech.icon}`}
              alt={tech.name}
              class="category-icon"
              title={tech.name}
            />
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .tech-section {
    padding: 4rem 3rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .section-header :global(.header-icon) {
    color: #9fbdda;
  }

  .section-header h3 {
    font-family: "Magna", sans-serif;
    font-size: 1rem;
    color: #9fbdda;
    margin: 0;
  }

  .main-stack {
    margin-bottom: 3rem;
  }

  .subsection-title {
    font-family: "Magna", sans-serif;
    font-size: 0.85rem;
    color: #9fbdda;
    opacity: 0.7;
    display: block;
    margin-bottom: 1rem;
  }

  .main-stack-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1rem;
  }

  .tech-card {
    background: rgba(159, 189, 218, 0.05);
    border: 2px solid rgba(159, 189, 218, 0.3);
    border-radius: 15px;
    padding: 1.5rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
  }

  .tech-card:hover {
    background: rgba(159, 189, 218, 0.1);
    border-color: rgba(159, 189, 218, 0.6);
    transform: translateY(-4px);
  }

  .tech-card.main {
    background: rgba(159, 189, 218, 0.08);
    border-color: rgba(159, 189, 218, 0.4);
  }

  .tech-icon {
    width: 48px;
    height: 48px;
  }

  .tech-name {
    font-family: "Format", sans-serif;
    font-size: 0.85rem;
    color: #9fbdda;
    text-align: center;
  }

  .tech-categories {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .category {
    background: transparent;
    border: 2px solid rgba(159, 189, 218, 0.2);
    border-radius: 15px;
    padding: 1.5rem;
  }

  .category-title {
    font-family: "Magna", sans-serif;
    font-size: 0.9rem;
    color: #9fbdda;
    display: block;
    margin-bottom: 1rem;
  }

  .category-icons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .category-icon {
    width: 40px;
    height: 40px;
    transition: transform 0.2s ease;
    cursor: pointer;
  }

  .category-icon:hover {
    transform: scale(1.15);
  }

  @media (max-width: 1024px) {
    .main-stack-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .tech-section {
      padding: 3rem 1.5rem;
    }

    .main-stack-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .tech-categories {
      grid-template-columns: 1fr;
    }
  }
</style>
