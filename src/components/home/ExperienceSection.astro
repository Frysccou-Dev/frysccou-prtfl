---
import { Briefcase } from "lucide-astro";
import { en } from "../../utils/translations/en";
import { es } from "../../utils/translations/es";
import { pt } from "../../utils/translations/pt";

interface Props {
  lang?: "en" | "es" | "pt";
}

const { lang = "en" } = Astro.props;

const translations = { en, es, pt };
const t = translations[lang];
---

<section
  class="w-full max-w-[1400px] mx-auto px-6 md:px-12 py-16"
  id="experience"
>
  <div class="flex items-center gap-2 mb-10">
    <Briefcase size={16} class="text-blue-300" />
    <h3 class="font-['Magna'] text-base text-blue-300 m-0">
      {t.sections.workExperience}
    </h3>
  </div>

  <div class="relative">
    <div
      class="absolute left-[23px] md:left-1/2 md:-translate-x-px top-0 bottom-0 w-0 border-l border-dotted border-blue-300 z-0"
    >
    </div>

    <div class="flex flex-col gap-8 md:gap-12">
      {
        t.workExperience.toReversed().map((job, index) => (
          <div
            class={`relative flex flex-col md:flex-row ${index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse"} items-start gap-4 md:gap-8`}
          >
            <div
              class={`hidden md:flex md:w-[calc(50%-2rem)] ${index % 2 === 0 ? "justify-end" : "justify-start"}`}
            >
              <div class="experience-card group relative bg-transparent border-2 border-blue-300/30 rounded-2xl p-6 transition-all duration-300 hover:bg-blue-300/[0.08] hover:border-blue-300/60 w-full max-w-lg">
                <div class="flex items-start gap-4 mb-4">
                  <img
                    src={job.icon}
                    alt={job.company}
                    class="w-14 h-14 rounded-full object-cover border-2 border-blue-300/50 shrink-0"
                  />
                  <div class="flex-1 min-w-0">
                    <h4 class="font-['Format'] text-base text-blue-300 m-0 mb-1">
                      {job.title}
                    </h4>
                    <span class="font-['Magna'] text-sm text-blue-300/60 block">
                      {job.company}
                    </span>
                  </div>
                </div>
                <div class="flex flex-wrap gap-2 mb-4">
                  <span class="font-['Magna'] text-xs text-blue-300/70 bg-blue-300/10 px-3 py-1.5 rounded-full whitespace-nowrap">
                    {job.period}
                  </span>
                  <span class="font-['Magna'] text-xs text-blue-400 bg-blue-400/15 px-3 py-1.5 rounded-full whitespace-nowrap">
                    {job.type}
                  </span>
                </div>
                <p class="font-['Format'] text-sm text-blue-300/80 leading-relaxed m-0">
                  {job.description}
                </p>
                {job.stack && (
                  <div class="mt-4">
                    <span class="font-['Magna'] text-[10px] text-blue-300/40 uppercase tracking-wider block mb-2">
                      {t.sections.currentStack}:
                    </span>
                    <div class="flex flex-wrap gap-1.5">
                      {job.stack.map((tech) => (
                        <span class="font-['Magna'] text-[10px] text-blue-300/60 border border-blue-300/20 px-2 py-0.5 rounded-md bg-blue-300/5">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>

            <div class="absolute left-0 md:left-1/2 md:-translate-x-1/2 w-12 h-12 rounded-full bg-transparent border-2 border-dotted border-blue-300 flex items-center justify-center z-10 shrink-0">
              <img
                src={job.icon}
                alt={job.company}
                class="w-8 h-8 rounded-full object-cover"
              />
            </div>

            <div class="md:hidden pl-16 w-full">
              <div class="experience-card group relative bg-transparent border-2 border-blue-300/30 rounded-2xl p-5 transition-all duration-300 hover:bg-blue-300/[0.08] hover:border-blue-300/60">
                <div class="flex flex-col gap-2 mb-3">
                  <h4 class="font-['Format'] text-base text-blue-300 m-0">
                    {job.title}
                  </h4>
                  <span class="font-['Magna'] text-sm text-blue-300/60">
                    {job.company}
                  </span>
                </div>
                <div class="flex flex-wrap gap-2 mb-4">
                  <span class="font-['Magna'] text-xs text-blue-300/70 bg-blue-300/10 px-3 py-1.5 rounded-full whitespace-nowrap">
                    {job.period}
                  </span>
                  <span class="font-['Magna'] text-xs text-blue-400 bg-blue-400/15 px-3 py-1.5 rounded-full whitespace-nowrap">
                    {job.type}
                  </span>
                </div>
                <p class="font-['Format'] text-sm text-blue-300/80 leading-relaxed m-0">
                  {job.description}
                </p>
                {job.stack && (
                  <div class="mt-4">
                    <span class="font-['Magna'] text-[10px] text-blue-300/40 uppercase tracking-wider block mb-2">
                      {t.sections.currentStack}:
                    </span>
                    <div class="flex flex-wrap gap-1.5">
                      {job.stack.map((tech) => (
                        <span class="font-['Magna'] text-[10px] text-blue-300/60 border border-blue-300/20 px-2 py-0.5 rounded-md bg-blue-300/5">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>

            <div class={`hidden md:block md:w-[calc(50%-2rem)]`} />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .experience-card::before {
    content: "";
    position: absolute;
    inset: -1px;
    border-radius: 1rem;
    padding: 1px;
    background: linear-gradient(
      135deg,
      rgba(159, 189, 218, 0.3) 0%,
      transparent 50%,
      rgba(159, 189, 218, 0.1) 100%
    );
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .experience-card:hover::before {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .experience-card {
      max-width: 100%;
    }
  }
</style>
