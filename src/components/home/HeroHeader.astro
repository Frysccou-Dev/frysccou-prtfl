    font-size: clamp(4rem, 12vw, 10rem);
    color: transparent;
    -webkit-text-stroke: 1px #9fbdda;
    margin: 0;
    padding: 0 1.5rem;
    flex-shrink: 0;
    letter-spacing: 0.02em;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style>
