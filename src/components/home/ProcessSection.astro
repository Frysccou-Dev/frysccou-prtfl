---
import { Sparkles } from "lucide-astro";
import { en } from "../../utils/translations/en";
import { es } from "../../utils/translations/es";
import { pt } from "../../utils/translations/pt";

interface Props {
  lang?: "en" | "es" | "pt";
}

const { lang = "en" } = Astro.props;

const translations = { en, es, pt };
const t = translations[lang];
---

<section class="process-section" id="process">
  <div class="section-header">
    <Sparkles size={16} class="header-icon" />
    <h3>{t.sections.process}</h3>
  </div>

  <div class="timeline">
    {
      t.processSteps.map((step, index) => (
        <div class="timeline-item">
          <div class="step-number">{step.number}</div>
          <div class="step-content">
            <h4 class="step-title">{step.title}</h4>
            <p class="step-description">{step.description}</p>
          </div>
          {index < t.processSteps.length - 1 && (
            <div class="timeline-connector" />
          )}
        </div>
      ))
    }
  </div>
</section>

<style>
  .process-section {
    padding: 4rem 3rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 3rem;
  }

  .section-header :global(.header-icon) {
    color: #9fbdda;
  }

  .section-header h3 {
    font-family: "Magna", sans-serif;
    font-size: 1rem;
    color: #9fbdda;
    margin: 0;
  }

  .timeline {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .timeline-item {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .step-number {
    font-family: "Gokil", sans-serif;
    font-size: 3rem;
    color: transparent;
    -webkit-text-stroke: 1px #9fbdda;
    opacity: 0.5;
    line-height: 1;
  }

  .step-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .step-title {
    font-family: "Format", sans-serif;
    font-size: 1.1rem;
    color: #9fbdda;
    margin: 0;
    position: relative;
    display: inline-block;
    padding-bottom: 0.5rem;
  }

  .step-title::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background: #9fbdda;
  }

  .step-description {
    font-family: "Format", sans-serif;
    font-size: 0.9rem;
    color: rgba(159, 189, 218, 0.7);
    line-height: 1.7;
    margin: 0;
  }

  .timeline-connector {
    display: none;
  }

  @media (max-width: 1024px) {
    .timeline {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .process-section {
      padding: 3rem 1.5rem;
    }

    .timeline {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .timeline-item {
      padding-left: 1rem;
      border-left: 2px solid rgba(159, 189, 218, 0.2);
    }

    .step-number {
      font-size: 2rem;
    }
  }
</style>
