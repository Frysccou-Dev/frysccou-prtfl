---
import { Music, ExternalLink } from "lucide-astro";
import { translations } from "../i18n/translations.js";

const t = translations.en;

interface Track {
  snippet: {
    title: string;
    resourceId: {
      videoId: string;
    };
    thumbnails: {
      high?: { url: string };
      default: { url: string };
    };
    videoOwnerChannelTitle: string;
  };
}

const playlistId = "PLr8nCm0aobtRA0SAeeK4Fa9tbWf-r-ton";
const apiKey = import.meta.env.YOUTUBE_API_KEY;

const url = `https://www.googleapis.com/youtube/v3/playlistItems?part=snippet&maxResults=5&playlistId=${playlistId}&key=${apiKey}`;

let tracks: Track[] = [];
try {
  const response = await fetch(url);
  const data = await response.json();
  tracks = data.items || [];
} catch (e) {
  console.error("Error cargando la playlist", e);
}

const cleanTitle = (title: string) => {
  return title
    .replace(/\s*\([^)]*\)/g, "")
    .replace(/\s*\/\/.*$/, "")
    .trim();
};
---

<section id="music" class="py-12 relative overflow-hidden">
  <div class="max-w-5xl mx-auto px-6 relative z-10">
    <div class="yt-music-card opacity-0 translate-y-10">
      <div class="text-center mb-8">
        <div
          class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent-soft/30 border border-accent/20 mb-3"
        >
          <Music class="w-4 h-4 text-accent" />
          <span
            class="text-xs font-bold text-accent uppercase tracking-widest"
            data-i18n="music.badge">{t.music.badge}</span
          >
        </div>
        <h2
          class="text-2xl md:text-3xl font-[Outfit] font-bold text-text-primary mb-2"
          data-i18n="music.title"
        >
          {t.music.title}
        </h2>
        <p class="text-text-muted text-sm" data-i18n="music.subtitle">
          {t.music.subtitle}
        </p>
      </div>

      <div
        class="mb-8 p-px rounded-2xl bg-linear-to-r from-accent/20 to-rose-accent/20"
      >
        <div
          class="bg-white/80 backdrop-blur-sm rounded-[calc(1rem-1px)] overflow-hidden border border-white"
        >
          <div class="grid md:grid-cols-[300px_1fr] gap-6 p-6">
            <div
              class="relative rounded-xl overflow-hidden shadow-lg aspect-square md:aspect-auto"
            >
              <img
                src="/yt-music.jpg"
                alt="90 degree angle"
                class="w-full h-full object-cover"
              />
              <div
                class="absolute inset-0 bg-linear-to-t from-black/40 to-transparent"
              >
              </div>
            </div>

            <div class="flex flex-col justify-center space-y-4">
              <div>
                <h3
                  class="text-2xl md:text-3xl font-bold text-text-primary mb-2"
                >
                  90 degree angle
                </h3>
                <p class="text-text-muted text-sm mb-3">
                  frysccou • <span data-i18n="music.playlistLabel"
                    >{t.music.playlistLabel}</span
                  > • Pública • 2026
                </p>
                <p class="text-text-muted text-sm line-clamp-3 leading-relaxed">
                  what about 88.78 degree angle??
                </p>
              </div>

              <div class="grid grid-cols-3 gap-4 pt-4 border-t border-gray-200">
                <div class="text-center">
                  <div class="text-xl md:text-2xl font-bold text-accent">
                    222
                  </div>
                  <div
                    class="text-xs text-text-muted uppercase tracking-wide"
                    data-i18n="music.tracksLabel"
                  >
                    {t.music.tracksLabel}
                  </div>
                </div>
                <div class="text-center">
                  <div class="text-xl md:text-2xl font-bold text-accent">
                    13+h
                  </div>
                  <div
                    class="text-xs text-text-muted uppercase tracking-wide"
                    data-i18n="music.durationLabel"
                  >
                    {t.music.durationLabel}
                  </div>
                </div>
                <div class="text-center">
                  <div class="text-xl md:text-2xl font-bold text-accent">
                    29K
                  </div>
                  <div
                    class="text-xs text-text-muted uppercase tracking-wide"
                    data-i18n="music.viewsLabel"
                  >
                    {t.music.viewsLabel}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-3">
        {
          tracks.map((track: Track) => (
            <a
              href={`https://music.youtube.com/watch?v=${track.snippet.resourceId.videoId}`}
              target="_blank"
              class="group relative p-px rounded-xl bg-linear-to-r from-accent/20 to-rose-accent/20 hover:from-accent/40 hover:to-rose-accent/40 transition-all duration-500 hover:shadow-lg hover:shadow-accent/10"
            >
              <div class="bg-white/80 backdrop-blur-sm rounded-[calc(0.75rem-1px)] p-2 h-full border border-white hover:border-accent/30 transition-all duration-500">
                <div class="relative aspect-square rounded-lg overflow-hidden mb-2 bg-gray-100">
                  <img
                    src={
                      track.snippet.thumbnails.high?.url ||
                      track.snippet.thumbnails.default.url
                    }
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    alt={track.snippet.title}
                  />
                  <div class="absolute inset-0 bg-linear-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
                  <div class="absolute bottom-1.5 right-1.5 w-7 h-7 rounded-full bg-accent flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-y-1 group-hover:translate-y-0 shadow-lg">
                    <ExternalLink class="w-3 h-3 text-white" />
                  </div>
                </div>

                <div class="space-y-0.5">
                  <h3 class="text-[10px] font-bold text-text-primary line-clamp-2 leading-tight group-hover:text-accent transition-colors duration-300">
                    {cleanTitle(track.snippet.title)}
                  </h3>
                  <p class="text-[9px] text-text-muted truncate">
                    {track.snippet.videoOwnerChannelTitle.replace(
                      " - Topic",
                      "",
                    )}
                  </p>
                </div>
              </div>
            </a>
          ))
        }
      </div>

      <div class="mt-6 text-center">
        <a
          href={`https://music.youtube.com/playlist?list=${playlistId}`}
          target="_blank"
          class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-accent text-white font-bold text-xs hover:bg-accent/90 hover:shadow-lg hover:shadow-accent/20 transition-all duration-300"
          data-i18n="music.viewPlaylist"
        >
          <Music class="w-3.5 h-3.5" />
          {t.music.viewPlaylist}
          <ExternalLink class="w-3 h-3" />
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    gsap.to(".yt-music-card", {
      scrollTrigger: {
        trigger: "#music",
        start: "top 85%",
      },
      opacity: 1,
      y: 0,
      duration: 1,
      ease: "power3.out",
    });
  });
</script>
