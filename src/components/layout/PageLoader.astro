<div class="page-loader" id="pageLoader">
  <div class="loader-bar">
    <div class="loader-progress"></div>
  </div>
</div>

<style>
  .page-loader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    z-index: 9999;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .page-loader.active {
    opacity: 1;
  }

  .loader-bar {
    position: relative;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.1);
    overflow: hidden;
  }

  .loader-progress {
    position: absolute;
    top: 0;
    left: 0;
    width: 0%;
    height: 100%;
    background: linear-gradient(
      90deg,
      #263b54 0%,
      #376492 25%,
      #6b9ac5 50%,
      #376492 75%,
      #263b54 100%
    );
    background-size: 200% 100%;
    animation: shimmer 1.5s ease-in-out infinite;
    border-radius: 0 2px 2px 0;
    box-shadow:
      0 0 10px rgba(107, 154, 197, 0.5),
      0 0 20px rgba(55, 100, 146, 0.3);
    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes shimmer {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }

  .page-loader.complete .loader-progress {
    width: 100%;
    transition: width 0.2s ease-out;
  }

  .page-loader.complete {
    opacity: 0;
    transition: opacity 0.4s ease 0.2s;
  }
</style>

<script>
  let progressInterval: ReturnType<typeof setInterval> | null = null;
  let currentProgress = 0;

  function initLoader() {
    const loader = document.getElementById("pageLoader");
    const progressBar = loader?.querySelector(
      ".loader-progress",
    ) as HTMLElement;
    if (!loader || !progressBar) return;

    currentProgress = 0;
    progressBar.style.width = "0%";
    loader.classList.remove("complete");
    loader.classList.add("active");

    startProgress(progressBar);

    if (document.readyState === "complete") {
      completeLoader();
    } else {
      window.addEventListener("load", completeLoader, { once: true });
    }
  }

  function startProgress(progressBar: HTMLElement) {
    if (progressInterval) clearInterval(progressInterval);

    progressInterval = setInterval(() => {
      if (currentProgress < 90) {
        const increment = Math.random() * 10 + 5;
        currentProgress = Math.min(currentProgress + increment, 90);
        progressBar.style.width = `${currentProgress}%`;
      }
    }, 200);
  }

  function completeLoader() {
    const loader = document.getElementById("pageLoader");
    const progressBar = loader?.querySelector(
      ".loader-progress",
    ) as HTMLElement;
    if (!loader || !progressBar) return;

    if (progressInterval) {
      clearInterval(progressInterval);
      progressInterval = null;
    }

    currentProgress = 100;
    progressBar.style.width = "100%";
    loader.classList.add("complete");

    setTimeout(() => {
      loader.classList.remove("active", "complete");
      progressBar.style.width = "0%";
      currentProgress = 0;
    }, 600);
  }

  function showLoaderForNavigation() {
    const loader = document.getElementById("pageLoader");
    const progressBar = loader?.querySelector(
      ".loader-progress",
    ) as HTMLElement;
    if (!loader || !progressBar) return;

    currentProgress = 0;
    progressBar.style.width = "0%";
    loader.classList.remove("complete");
    loader.classList.add("active");

    startProgress(progressBar);
  }

  initLoader();

  document.addEventListener(
    "astro:before-preparation",
    showLoaderForNavigation,
  );

  document.addEventListener("astro:page-load", () => {
    const loader = document.getElementById("pageLoader");
    if (loader && loader.classList.contains("active")) {
      completeLoader();
    }
  });
</script>
