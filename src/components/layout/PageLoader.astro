---
interface Props {
  lang?: "en" | "es" | "pt";
}

const { lang = "en" } = Astro.props;

const texts = {
  en: "Just a second...",
  es: "Dame un segundo...",
  pt: "SÃ³ um segundo...",
};

const loadingText = texts[lang];
---

<div class="page-loader" id="pageLoader">
  <div class="loader-overlay">
    <span class="loader-text">{loadingText}</span>
  </div>
</div>

<style>
  .page-loader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    pointer-events: none;
    overflow: hidden;
  }

  .loader-overlay {
    position: absolute;
    left: 0;
    width: 100%;
    height: 100%;
    background: #263b54;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: translateY(100%);
    transition: transform 0.6s cubic-bezier(0.645, 0.045, 0.355, 1);
  }

  .loader-text {
    font-family: "Magna", sans-serif;
    font-size: 1.2rem;
    color: white;
    opacity: 0;
    transition: opacity 0.3s ease;
    letter-spacing: 0.1em;
  }

  .page-loader.enter .loader-overlay {
    transform: translateY(0%);
  }

  .page-loader.enter .loader-text {
    opacity: 1;
    transition-delay: 0.4s;
  }

  .page-loader.exit .loader-overlay {
    transform: translateY(-100%);
  }

  .page-loader.exit .loader-text {
    opacity: 0;
  }
</style>

<script>
  const MIN_DURATION = 1000;
  let loadStartTime = Date.now();

  function initLoader() {
    const loader = document.getElementById("pageLoader");
    if (!loader) return;

    loadStartTime = Date.now();

    requestAnimationFrame(() => {
      loader.classList.add("enter");
    });

    const checkReady = () => {
      if (document.readyState === "complete") {
        exitLoader();
      } else {
        window.addEventListener("load", exitLoader, { once: true });
      }
    };

    checkReady();
  }

  function exitLoader() {
    const loader = document.getElementById("pageLoader");
    if (!loader) return;

    const elapsed = Date.now() - loadStartTime;
    const remaining = Math.max(0, MIN_DURATION - elapsed);

    setTimeout(() => {
      loader.classList.remove("enter");
      loader.classList.add("exit");
    }, remaining);
  }

  function showLoaderForNavigation() {
    const loader = document.getElementById("pageLoader");
    if (!loader) return;

    loadStartTime = Date.now();
    loader.classList.remove("exit");

    requestAnimationFrame(() => {
      loader.classList.add("enter");
    });
  }

  initLoader();

  document.addEventListener(
    "astro:before-preparation",
    showLoaderForNavigation
  );

  document.addEventListener("astro:page-load", () => {
    const loader = document.getElementById("pageLoader");
    if (loader && loader.classList.contains("enter")) {
      exitLoader();
    }
  });
</script>
