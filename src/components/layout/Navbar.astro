---
import { Github, Linkedin, Youtube, Menu, X } from "lucide-astro";
import { en } from "../../utils/translations/en";
import { es } from "../../utils/translations/es";
import { pt } from "../../utils/translations/pt";

interface Props {
  lang?: "en" | "es" | "pt";
}

const { lang = "en" } = Astro.props;

const translations = { en, es, pt };
const t = translations[lang].nav;
---

<nav class="navbar">
  <div class="navbar-container">
    <div class="navbar-left">
      <a href="#projects" class="nav-btn smooth-scroll">{t.projects}</a>
      <a href="#about" class="nav-btn smooth-scroll">{t.aboutMe}</a>
      <a href="#tech" class="nav-btn smooth-scroll">{t.knowledge}</a>
      <a href="#contact" class="nav-btn smooth-scroll">{t.contact}</a>
    </div>

    <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Menu">
      <Menu size={20} class="menu-icon" />
      <X size={20} class="close-icon" />
    </button>

    <div class="navbar-center">
      <a href="/" class="logo-link">
        <img src="/logo-brand.png" alt="Logo" class="logo" />
      </a>
    </div>

    <div class="navbar-right">
      <a
        href="https://github.com/esspindola"
        target="_blank"
        rel="noopener noreferrer"
        class="social-btn"
        aria-label="GitHub"
      >
        <Github size={14} />
      </a>
      <a
        href="https://www.linkedin.com/in/espindola-francisco/"
        target="_blank"
        rel="noopener noreferrer"
        class="social-btn"
        aria-label="LinkedIn"
      >
        <Linkedin size={14} />
      </a>
      <a
        href="https://music.youtube.com/playlist?list=PLr8nCm0aobtRA0SAeeK4Fa9tbWf-r-ton"
        target="_blank"
        rel="noopener noreferrer"
        class="social-btn"
        aria-label="YouTube"
      >
        <Youtube size={14} />
      </a>
    </div>
  </div>

  <div class="mobile-menu" id="mobileMenu">
    <a href="#projects" class="mobile-nav-btn smooth-scroll">{t.projects}</a>
    <a href="#about" class="mobile-nav-btn smooth-scroll">{t.aboutMe}</a>
    <a href="#tech" class="mobile-nav-btn smooth-scroll">{t.knowledge}</a>
    <a href="#contact" class="mobile-nav-btn smooth-scroll">{t.contact}</a>
  </div>
</nav>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background: transparent;
    padding: 1rem 0;
    font-family: "Magna", sans-serif;
  }

  .navbar-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 3rem;
  }

  .navbar-left {
    display: flex;
    gap: 0.75rem;
  }

  .navbar-center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .navbar-right {
    display: flex;
    gap: 0.75rem;
  }

  .nav-btn {
    background: transparent;
    border: 1px solid #9fbdda;
    color: #9fbdda;
    padding: 0.35rem 0.9rem;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-btn:hover {
    background: rgba(159, 189, 218, 0.1);
    transform: translateY(-2px);
  }

  .logo-link {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo {
    height: 55px;
    width: auto;
  }

  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: 1px solid #9fbdda;
    color: #9fbdda;
    width: 30px;
    height: 30px;
    padding: 0;
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .social-btn:hover {
    background: rgba(159, 189, 218, 0.1);
    transform: translateY(-2px);
  }

  .mobile-menu-btn {
    display: none;
    background: transparent;
    border: 1px solid #9fbdda;
    color: #9fbdda;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    cursor: pointer;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    padding: 0;
  }

  .mobile-menu-btn:hover {
    background: rgba(159, 189, 218, 0.1);
  }

  .mobile-menu-btn .close-icon {
    display: none;
  }

  .mobile-menu-btn.active .menu-icon {
    display: none;
  }

  .mobile-menu-btn.active .close-icon {
    display: block;
  }

  .mobile-menu {
    display: none;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1.5rem;
    background: rgba(38, 59, 84, 0.95);
    backdrop-filter: blur(10px);
    border-top: 1px solid rgba(159, 189, 218, 0.2);
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transition: all 0.3s ease;
  }

  .mobile-menu.open {
    max-height: 300px;
    opacity: 1;
    padding: 1.5rem;
  }

  .mobile-nav-btn {
    background: transparent;
    border: 1px solid #9fbdda;
    color: #9fbdda;
    padding: 0.75rem 1.25rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    text-align: center;
    transition: all 0.2s ease;
  }

  .mobile-nav-btn:hover {
    background: rgba(159, 189, 218, 0.1);
  }

  @media (max-width: 900px) {
    .navbar-container {
      padding: 0 1.5rem;
    }

    .navbar-left {
      gap: 0.5rem;
    }

    .nav-btn {
      padding: 0.4rem 0.75rem;
      font-size: 0.75rem;
    }

    .logo {
      height: 32px;
    }
  }

  @media (max-width: 768px) {
    .navbar-left {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .mobile-menu {
      display: flex;
    }

    .navbar-center {
      position: static;
      transform: none;
    }

    .navbar-container {
      justify-content: space-between;
    }
  }
</style>

<script>
  function initNavbar() {
    const mobileMenuBtn = document.getElementById("mobileMenuBtn");
    const mobileMenu = document.getElementById("mobileMenu");
    const mobileNavBtns = document.querySelectorAll(".mobile-nav-btn");

    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener("click", () => {
        mobileMenuBtn.classList.toggle("active");
        mobileMenu.classList.toggle("open");
      });

      mobileNavBtns.forEach((btn) => {
        btn.addEventListener("click", () => {
          mobileMenuBtn.classList.remove("active");
          mobileMenu.classList.remove("open");
        });
      });
    }
  }

  function initSmoothScroll() {
    const scrollLinks = document.querySelectorAll(".smooth-scroll");

    scrollLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        const targetId = link.getAttribute("href");
        if (!targetId) return;

        const targetElement = document.querySelector(targetId);
        if (targetElement) {
          const navbarHeight = 80;
          const elementPosition = targetElement.getBoundingClientRect().top;
          const offsetPosition =
            elementPosition + window.pageYOffset - navbarHeight;

          window.scrollTo({
            top: offsetPosition,
            behavior: "smooth",
          });
        }
      });
    });
  }

  initNavbar();
  initSmoothScroll();
  document.addEventListener("astro:page-load", () => {
    initNavbar();
    initSmoothScroll();
  });
</script>
