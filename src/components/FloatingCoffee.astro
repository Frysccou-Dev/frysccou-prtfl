<a
  href="#contact"
  id="floating-studio"
  class="fixed bottom-6 right-6 z-40 group opacity-0 translate-y-10"
  aria-label="Visit Dot Studio"
>
  <img
    src="/work/dot-logo.svg"
    alt="Dot Studio"
    class="w-16 h-16 rounded-full bg-white p-3 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 border border-gray-100"
  />
</a>

<style>
  #floating-studio.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("floating-studio");

    setTimeout(() => {
      btn?.classList.add("visible");
    }, 2000);
  });
</script>
