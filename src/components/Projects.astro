---
import { translations } from "../i18n/translations.js";
import { projects } from "../i18n/data.js";
import { Github } from "lucide-astro";
const t = translations.en;
---

<section id="projects" class="py-32 relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="text-center mb-16 projects-header opacity-0 translate-y-10">
      <h2
        class="text-4xl md:text-5xl font-[Outfit] font-bold mb-4 text-text-primary"
        data-i18n="projects.title"
      >
        {t.projects.title}
      </h2>
      <p class="text-text-muted text-lg" data-i18n="projects.subtitle">
        {t.projects.subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12">
      {
        projects.map((project, index) => (
          <div class="project-card opacity-0 translate-y-10 group bg-white rounded-3xl overflow-hidden border border-gray-100 hover:border-accent transition-all duration-500 hover:shadow-2xl hover:shadow-accent-soft/20 hover:-translate-y-2">
            <div class="aspect-video bg-gray-50 relative overflow-hidden">
              <img
                src={project.image}
                alt={project.title.en}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-linear-to-t from-text-primary/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
              <div class="absolute top-6 left-6">
                <div class="px-3 py-1 bg-white/80 backdrop-blur-md border border-gray-100 rounded-full text-[10px] font-bold tracking-widest text-text-muted uppercase">
                  {(index + 1).toString().padStart(2, "0")} â€¢ Featured
                </div>
              </div>
            </div>

            <div class="p-8">
              <h3
                class="text-2xl font-[Outfit] font-bold text-text-primary mb-4 project-title"
                data-project-id={project.id}
                data-lang-en={project.title.en}
                data-lang-es={project.title.es}
              >
                {project.title.en}
              </h3>
              <p
                class="text-text-muted text-base mb-8 leading-relaxed project-desc"
                data-project-id={project.id}
                data-lang-en={project.description.en}
                data-lang-es={project.description.es}
              >
                {project.description.en}
              </p>

              {project.aptitudes && (
                <div class="mb-8">
                  <p class="text-[10px] font-bold text-accent uppercase tracking-wider mb-3">
                    Aptitudes
                  </p>
                  <div class="flex flex-wrap gap-2">
                    {project.aptitudes.map((skill) => (
                      <span class="px-3 py-1 bg-gray-50 rounded-lg text-xs text-text-secondary border border-gray-100 group-hover:border-accent/30 group-hover:bg-accent-soft/30 transition-all duration-300">
                        {skill}
                      </span>
                    ))}
                  </div>
                </div>
              )}

              <div class="flex gap-4">
                <a
                  href={project.liveUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-1 px-6 py-3 bg-text-primary text-white rounded-xl text-sm font-semibold text-center transition-all duration-300 hover:bg-accent hover:shadow-lg hover:shadow-accent/20"
                >
                  <span data-i18n="projects.viewProject">
                    {t.projects.viewProject}
                  </span>
                </a>
                <a
                  href={project.codeUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="px-5 py-3 bg-white border border-gray-200 text-text-secondary rounded-xl text-sm font-semibold transition-all duration-300 hover:border-accent hover:text-accent hover:bg-accent-soft/20"
                >
                  <Github class="w-5 h-5" />
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    gsap.to(".projects-header", {
      scrollTrigger: {
        trigger: "#projects",
        start: "top 85%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      y: 0,
      duration: 1,
      ease: "power3.out",
    });

    gsap.to(".project-card", {
      scrollTrigger: {
        trigger: "#projects",
        start: "top 70%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      y: 0,
      duration: 0.8,
      stagger: 0.2,
      ease: "power3.out",
    });
  });
</script>
