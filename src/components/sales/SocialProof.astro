---
import { CheckCircle, Users, Clock, Award } from "lucide-astro";

const stats = [
  { icon: CheckCircle, value: "+20", label: "Proyectos entregados" },
  { icon: Users, value: "100%", label: "Clientes satisfechos" },
  { icon: Clock, value: "2+", label: "Años de experiencia" },
  { icon: Award, value: "4", label: "Empresas destacadas" },
];

const clients = [
  { name: "ZatoBox", logo: "/work/zatobox.jpg" },
  { name: "Dragon Pyramid", logo: "/work/dragon-pyramid.jpg" },
  { name: "Niuro", logo: "/work/niuro.jpg" },
  { name: "ConSentido Cognitivo", logo: "/work/consentido.jpeg" },
];
---

<section class="social-proof">
  <div class="proof-container">
    <div class="stats-grid">
      {
        stats.map((stat) => {
          const IconComponent = stat.icon;
          return (
            <div class="stat-item">
              <IconComponent size={24} class="stat-icon" />
              <span class="stat-value">{stat.value}</span>
              <span class="stat-label">{stat.label}</span>
            </div>
          );
        })
      }
    </div>

    <div class="clients-section">
      <span class="clients-title">Empresas que confiaron en mí</span>
      <div class="clients-grid">
        {
          clients.map((client) => (
            <div class="client-logo">
              <img
                src={client.logo}
                alt={client.name}
                title={client.name}
                loading="lazy"
              />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .social-proof {
    padding: 4rem 2rem;
    background: rgba(159, 189, 218, 0.03);
    border-top: 1px solid rgba(159, 189, 218, 0.1);
    border-bottom: 1px solid rgba(159, 189, 218, 0.1);
  }
  .proof-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }
  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.5rem;
  }
  .stat-item :global(.stat-icon) {
    color: #6b9ac5;
    margin-bottom: 0.5rem;
  }
  .stat-value {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    color: #9fbdda;
    line-height: 1;
  }
  .stat-label {
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: rgba(159, 189, 218, 0.6);
  }
  .clients-section {
    text-align: center;
  }
  .clients-title {
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: rgba(159, 189, 218, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: block;
    margin-bottom: 1.5rem;
  }
  .clients-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    flex-wrap: wrap;
  }
  .client-logo {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid rgba(159, 189, 218, 0.2);
    transition: all 0.3s ease;
    filter: grayscale(50%);
    opacity: 0.7;
  }
  .client-logo:hover {
    filter: grayscale(0%);
    opacity: 1;
    border-color: rgba(159, 189, 218, 0.5);
    transform: scale(1.1);
  }
  .client-logo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
    .stat-value {
      font-size: 2rem;
    }
    .clients-grid {
      gap: 1.5rem;
    }
    .client-logo {
      width: 55px;
      height: 55px;
    }
  }
</style>
