---
import { ExternalLink, ArrowUpRight } from "lucide-astro";

const cases = [
  {
    id: "conscentido-cognitivo",
    title: "ConSentido Cognitivo",
    category: "Landing Page",
    result: "Plataforma accesible para adultos mayores",
    image: "/projects/consentido.png",
    url: "https://www.consentidocognitivo.site/",
    metrics: [
      { label: "Tiempo de carga", value: "<2s" },
      { label: "Accesibilidad", value: "100%" },
    ],
  },
  {
    id: "gym-master",
    title: "Gym Master",
    category: "Web App PWA",
    result: "App fitness completa",
    image: "/projects/gym-master.jpg",
    url: "https://gym-master-new.vercel.app",
    metrics: [
      { label: "Usuarios", value: "500+" },
      { label: "Rating", value: "4.9★" },
    ],
  },
  {
    id: "bycarket",
    title: "Bycarket",
    category: "E-commerce + IA",
    result: "Marketplace inteligente",
    image: "/projects/bycarket.jpg",
    url: "https://bycarket-front-main.vercel.app/home",
    metrics: [
      { label: "Conversión", value: "+35%" },
      { label: "Búsquedas", value: "10k+" },
    ],
  },
  {
    id: "zatobox",
    title: "ZatoBox",
    category: "Web App",
    result: "Arquitectura cloud",
    image: "/projects/zatobox.png",
    url: "https://zatobox.io/",
    metrics: [
      { label: "Costos", value: "-40%" },
      { label: "Uptime", value: "99.9%" },
    ],
  },
];
---

<section class="cases-section" id="casos">
  <div class="section-header">
    <span class="section-tag">Portafolio</span>
    <h2 class="section-title">Casos de éxito</h2>
    <p class="section-subtitle">Proyectos reales con resultados medibles</p>
  </div>

  <div class="cases-grid">
    {
      cases.map((project, index) => (
        <a
          href={project.url}
          target="_blank"
          rel="noopener noreferrer"
          class={`case-card ${index === 0 ? "featured" : ""}`}
        >
          <div class="case-image">
            <img src={project.image} alt={project.title} loading="lazy" />
            <div class="case-overlay">
              <span class="view-project">
                Ver proyecto <ArrowUpRight size={16} />
              </span>
            </div>
          </div>
          <div class="case-content">
            <span class="case-category">{project.category}</span>
            <h3 class="case-title">{project.title}</h3>
            <p class="case-result">{project.result}</p>
            <div class="case-metrics">
              {project.metrics.map((m) => (
                <div class="metric">
                  <span class="metric-value">{m.value}</span>
                  <span class="metric-label">{m.label}</span>
                </div>
              ))}
            </div>
          </div>
        </a>
      ))
    }
  </div>

  <div class="cases-cta">
    <a href="/about" class="see-all-btn"
      >Ver todos los proyectos <ArrowUpRight size={18} /></a
    >
  </div>
</section>

<style>
  .cases-section {
    padding: 6rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  .section-tag {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.8rem;
    color: #9fbdda;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    background: rgba(159, 189, 218, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 50px;
    margin-bottom: 1rem;
  }
  .section-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 5vw, 3rem);
    color: #9fbdda;
    margin: 0 0 1rem;
  }
  .section-subtitle {
    font-family: var(--font-body);
    font-size: 1.1rem;
    color: rgba(159, 189, 218, 0.7);
  }
  .cases-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }
  .case-card {
    position: relative;
    background: rgba(159, 189, 218, 0.03);
    border: 2px solid rgba(159, 189, 218, 0.15);
    border-radius: 20px;
    overflow: hidden;
    text-decoration: none;
    transition: all 0.4s ease;
  }
  .case-card:hover {
    border-color: rgba(159, 189, 218, 0.4);
    transform: translateY(-5px);
  }
  .case-card.featured {
    grid-column: span 2;
  }
  .case-image {
    position: relative;
    height: 220px;
    overflow: hidden;
  }
  .case-card.featured .case-image {
    height: 300px;
  }
  .case-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  .case-card:hover .case-image img {
    transform: scale(1.05);
  }
  .case-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(10, 10, 11, 0.9), transparent 50%);
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
    padding: 1.5rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  .case-card:hover .case-overlay {
    opacity: 1;
  }
  .view-project {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #9fbdda;
    color: #0a0a0b;
    font-family: var(--font-body);
    font-size: 0.8rem;
    padding: 0.5rem 1rem;
    border-radius: 50px;
  }
  .case-content {
    padding: 1.5rem;
  }
  .case-category {
    font-family: var(--font-body);
    font-size: 0.75rem;
    color: #6b9ac5;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    background: rgba(107, 154, 197, 0.15);
    padding: 0.3rem 0.75rem;
    border-radius: 50px;
  }
  .case-title {
    font-family: var(--font-body);
    font-size: 1.4rem;
    color: #9fbdda;
    margin: 0.75rem 0 0.3rem;
  }
  .case-result {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: rgba(159, 189, 218, 0.7);
    margin: 0 0 1rem;
  }
  .case-metrics {
    display: flex;
    gap: 2rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(159, 189, 218, 0.1);
  }
  .metric {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }
  .metric-value {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    color: #9fbdda;
  }
  .metric-label {
    font-family: var(--font-body);
    font-size: 0.7rem;
    color: rgba(159, 189, 218, 0.5);
    text-transform: uppercase;
  }
  .cases-cta {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }
  .see-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body);
    font-size: 1rem;
    color: #9fbdda;
    text-decoration: none;
    padding: 1rem 2rem;
    border: 2px solid rgba(159, 189, 218, 0.3);
    border-radius: 50px;
    transition: all 0.3s ease;
  }
  .see-all-btn:hover {
    background: rgba(159, 189, 218, 0.1);
    border-color: #9fbdda;
  }
  @media (max-width: 1024px) {
    .cases-grid {
      grid-template-columns: 1fr;
    }
    .case-card.featured {
      grid-column: span 1;
    }
    .case-card.featured .case-image {
      height: 220px;
    }
  }
  @media (max-width: 768px) {
    .cases-section {
      padding: 4rem 1.5rem;
    }
  }
</style>
