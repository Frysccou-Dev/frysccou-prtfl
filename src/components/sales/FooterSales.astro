      <button class="back-to-top" id="backToTop" aria-label="Volver arriba">
        <ArrowUp size={18} />
      </button>
    </div>
  </div>
</footer>

<style>
  .footer-sales {
    padding: 4rem 2rem 2rem;
    background: rgba(245, 247, 250, 0.8);
    border-top: 1px solid rgba(55, 100, 146, 0.1);
  }
  :global(html.dark) .footer-sales {
    background: rgba(10, 10, 11, 0.5);
    border-top-color: rgba(159, 189, 218, 0.1);
  }
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  .footer-top {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(159, 189, 218, 0.1);
  }
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .footer-logo {
    height: 100px;
    width: auto;
    max-width: 250px;
    object-fit: contain;
  }
  .footer-tagline {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: #376492;
    max-width: 250px;
    line-height: 1.5;
  }
  :global(html.dark) .footer-tagline {
    color: rgba(159, 189, 218, 0.6);
  }
  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  .footer-col h4 {
    font-family: var(--font-body);
    font-size: 0.85rem;
    font-weight: 600;
    color: #376492;
    margin: 0 0 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  :global(html.dark) .footer-col h4 {
    color: #9fbdda;
  }
  .footer-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }
  .footer-col a {
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: rgba(55, 100, 146, 0.7);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  :global(html.dark) .footer-col a {
    color: rgba(159, 189, 218, 0.6);
  }
  .footer-col a:hover {
    color: #376492;
  }
  :global(html.dark) .footer-col a:hover {
    color: #9fbdda;
  }
  .footer-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 2rem;
  }
  .footer-social {
    display: flex;
    gap: 1rem;
  }
  .footer-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(55, 100, 146, 0.05);
    border: 1px solid rgba(55, 100, 146, 0.2);
    border-radius: 50%;
    color: #376492;
    transition: all 0.3s ease;
  }
  :global(html.dark) .footer-social a {
    background: rgba(159, 189, 218, 0.05);
    border-color: rgba(159, 189, 218, 0.2);
    color: #9fbdda;
  }
  .footer-social a:hover {
    background: rgba(55, 100, 146, 0.1);
    border-color: #376492;
    transform: translateY(-2px);
  }
  :global(html.dark) .footer-social a:hover {
    background: rgba(159, 189, 218, 0.1);
    border-color: #9fbdda;
  }
  .footer-copy {
    font-family: var(--font-body);
    font-size: 0.8rem;
    color: rgba(55, 100, 146, 0.6);
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }
  :global(html.dark) .footer-copy {
    color: rgba(159, 189, 218, 0.5);
  }
  .footer-copy :global(.heart) {
    color: #f87171;
    animation: heartbeat 1.5s infinite;
  }
  @keyframes heartbeat {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }
  .back-to-top {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(55, 100, 146, 0.1);
    border: 1px solid rgba(55, 100, 146, 0.3);
    border-radius: 50%;
    color: #376492;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  :global(html.dark) .back-to-top {
    background: rgba(159, 189, 218, 0.1);
    border-color: rgba(159, 189, 218, 0.3);
    color: #9fbdda;
  }
  .back-to-top:hover {
    background: rgba(55, 100, 146, 0.2);
    border-color: #376492;
    transform: translateY(-3px);
  }
  :global(html.dark) .back-to-top:hover {
    background: rgba(159, 189, 218, 0.2);
    border-color: #9fbdda;
  }
  @media (max-width: 900px) {
    .footer-top {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .footer-links {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  @media (max-width: 768px) {
    .footer-sales {
      padding: 3rem 1.5rem 1.5rem;
    }
    .footer-links {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    .footer-bottom {
      flex-direction: column;
      gap: 1.5rem;
      text-align: center;
    }
  }
</style>

<script>
  const backToTop = document.getElementById("backToTop");
  backToTop?.addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
</script>
