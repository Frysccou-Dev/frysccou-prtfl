---
import { MessageCircle, Mail, Phone, Send, ArrowRight } from "lucide-astro";
---

<section class="contact-sales" id="contacto">
  <div class="contact-container">
    <div class="contact-info">
      <span class="section-tag">Contacto</span>
      <h2 class="contact-title">¿Listo para empezar tu proyecto?</h2>
      <p class="contact-subtitle">
        Contame tu idea y te respondo en menos de 24 horas con una propuesta
        personalizada.
      </p>

      <div class="contact-methods">
        <a
          href="https://wa.me/541167672197"
          target="_blank"
          rel="noopener noreferrer"
          class="contact-method whatsapp"
        >
          <div class="method-icon"><MessageCircle size={24} /></div>
          <div class="method-info">
            <span class="method-label">WhatsApp</span>
            <span class="method-value">+54 11 6767-2197</span>
          </div>
          <ArrowRight size={18} class="method-arrow" />
        </a>

        <a href="mailto:franespindola71@gmail.com" class="contact-method email">
          <div class="method-icon"><Mail size={24} /></div>
          <div class="method-info">
            <span class="method-label">Email</span>
            <span class="method-value">franespindola71@gmail.com</span>
          </div>
          <ArrowRight size={18} class="method-arrow" />
        </a>
      </div>

      <div class="response-badge">
        <span class="pulse-dot"></span>
        <span>Respuesta en menos de 24hs</span>
      </div>
    </div>

    <div class="contact-form-wrapper">
      <form
        class="contact-form"
        action="https://formspree.io/f/xzznoqva"
        method="POST"
        id="salesContactForm"
      >
        <input
          type="hidden"
          name="_subject"
          value="Nuevo lead - Landing de Ventas"
        />

        <div class="form-group">
          <label for="name">Tu nombre</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            placeholder="Juan Pérez"
          />
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="juan@empresa.com"
            />
          </div>
          <div class="form-group">
            <label for="phone">Teléfono (opcional)</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              placeholder="+54 11 1234-5678"
            />
          </div>
        </div>

        <div class="form-group">
          <label for="service">¿Qué servicio te interesa?</label>
          <select id="service" name="service" required>
            <option value="" disabled selected>Selecciona una opción</option>
            <option value="landing">Landing Page</option>
            <option value="web">Web Profesional</option>
            <option value="ecommerce">E-commerce</option>
            <option value="webapp">Web App a medida</option>
            <option value="otro">Otro / No estoy seguro</option>
          </select>
        </div>

        <div class="form-group">
          <label for="message">Contame sobre tu proyecto</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            required
            placeholder="Describí brevemente qué necesitás y cualquier detalle importante..."
          ></textarea>
        </div>

        <button type="submit" class="submit-btn" id="submitBtn">
          <div class="btn-text">
            <Send size={18} />
            <span>Enviar mensaje</span>
          </div>
          <div class="btn-loading">Enviando...</div>
        </button>

        <div class="form-status">
          <p class="success-message">¡Mensaje enviado! Te contacto pronto.</p>
          <p class="error-message">Hubo un error. Probá de nuevo.</p>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
  .contact-sales {
    padding: 6rem 2rem;
    background: rgba(159, 189, 218, 0.02);
  }
  .contact-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 4rem;
    align-items: start;
  }
  .section-tag {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.8rem;
    color: #9fbdda;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    background: rgba(159, 189, 218, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 50px;
    margin-bottom: 1rem;
  }
  .contact-title {
    font-family: var(--font-heading);
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    color: #9fbdda;
    margin: 0 0 1rem;
    line-height: 1.2;
  }
  .contact-subtitle {
    font-family: var(--font-body);
    font-size: 1.1rem;
    color: rgba(159, 189, 218, 0.7);
    line-height: 1.6;
    margin: 0 0 2rem;
  }
  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  .contact-method {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: rgba(159, 189, 218, 0.05);
    border: 2px solid rgba(159, 189, 218, 0.15);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .contact-method:hover {
    border-color: rgba(159, 189, 218, 0.4);
    background: rgba(159, 189, 218, 0.08);
    transform: translateX(5px);
  }
  .contact-method.whatsapp:hover {
    border-color: #25d366;
  }
  .method-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(159, 189, 218, 0.1);
    border-radius: 10px;
    color: #9fbdda;
  }
  .contact-method.whatsapp .method-icon {
    background: rgba(37, 211, 102, 0.15);
    color: #25d366;
  }
  .method-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }
  .method-label {
    font-family: var(--font-body);
    font-size: 0.75rem;
    color: rgba(159, 189, 218, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .method-value {
    font-family: var(--font-body);
    font-size: 1rem;
    color: #9fbdda;
  }
  .method-arrow {
    color: rgba(159, 189, 218, 0.3);
    transition: all 0.3s ease;
  }
  .contact-method:hover .method-arrow {
    color: #9fbdda;
    transform: translateX(3px);
  }
  .response-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: rgba(159, 189, 218, 0.6);
  }
  .pulse-dot {
    width: 8px;
    height: 8px;
    background: #4ade80;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }
  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
      box-shadow: 0 0 0 0 rgba(74, 222, 128, 0.4);
    }
    50% {
      opacity: 0.8;
      box-shadow: 0 0 0 8px rgba(74, 222, 128, 0);
    }
  }
  .contact-form-wrapper {
    background: rgba(159, 189, 218, 0.03);
    border: 2px solid rgba(159, 189, 218, 0.15);
    border-radius: 20px;
    padding: 2.5rem;
  }
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .form-group label {
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: rgba(159, 189, 218, 0.8);
  }
  .form-group input,
  .form-group select,
  .form-group textarea {
    font-family: var(--font-body);
    font-size: 1rem;
    color: #9fbdda;
    background: rgba(159, 189, 218, 0.05);
    border: 2px solid rgba(159, 189, 218, 0.2);
    border-radius: 10px;
    padding: 0.9rem 1rem;
    outline: none;
    transition: all 0.3s ease;
  }
  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: rgba(159, 189, 218, 0.3);
  }
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    border-color: #9fbdda;
    background: rgba(159, 189, 218, 0.08);
  }
  .form-group select {
    cursor: pointer;
  }
  .form-group select option {
    background: #1f2f44;
    color: #9fbdda;
  }
  .form-group textarea {
    resize: vertical;
    min-height: 100px;
  }
  .submit-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #9fbdda 0%, #6b9ac5 100%);
    color: #0a0a0b;
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    padding: 1rem 2rem;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 0.5rem;
  }
  .submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(159, 189, 218, 0.3);
  }
  .btn-text,
  .btn-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
  }
  .submit-btn .btn-loading {
    display: none;
  }
  .submit-btn.loading .btn-text {
    display: none;
  }
  .submit-btn.loading .btn-loading {
    display: flex;
  }
  .submit-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }
  .form-status {
    display: none;
  }
  .form-status.show {
    display: block;
  }
  .success-message,
  .error-message {
    font-family: var(--font-body);
    font-size: 0.9rem;
    padding: 1rem;
    border-radius: 10px;
    margin: 0;
    display: none;
    text-align: center;
  }
  .success-message {
    color: #4ade80;
    background: rgba(74, 222, 128, 0.1);
    border: 1px solid rgba(74, 222, 128, 0.3);
  }
  .error-message {
    color: #f87171;
    background: rgba(248, 113, 113, 0.1);
    border: 1px solid rgba(248, 113, 113, 0.3);
  }
  .form-status.success .success-message {
    display: block;
  }
  .form-status.error .error-message {
    display: block;
  }
  @media (max-width: 900px) {
    .contact-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    .form-row {
      grid-template-columns: 1fr;
    }
  }
  @media (max-width: 768px) {
    .contact-sales {
      padding: 4rem 1.5rem;
    }
    .contact-form-wrapper {
      padding: 1.5rem;
    }
  }
</style>

<script>
  const form = document.getElementById("salesContactForm") as HTMLFormElement;
  const submitBtn = form?.querySelector(".submit-btn") as HTMLButtonElement;
  const formStatus = form?.querySelector(".form-status") as HTMLElement;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    submitBtn.classList.add("loading");
    submitBtn.disabled = true;
    formStatus.classList.remove("show", "success", "error");

    try {
      const response = await fetch(form.action, {
        method: "POST",
        body: new FormData(form),
        headers: { Accept: "application/json" },
      });

      if (response.ok) {
        formStatus.classList.add("show", "success");
        form.reset();
      } else {
        formStatus.classList.add("show", "error");
      }
    } catch (error) {
      formStatus.classList.add("show", "error");
    }

    submitBtn.classList.remove("loading");
    submitBtn.disabled = false;
  });
</script>
