---
import { translations } from "../i18n/translations.js";
import { Github, Linkedin, Instagram, Heart } from "lucide-astro";
const t = translations.en;
const currentYear = new Date().getFullYear();
---

<footer class="py-12 border-t border-gray-100 bg-white">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex flex-col md:flex-row items-center justify-between gap-8">
      <div class="footer-brand">
        <a
          href="#"
          class="text-2xl font-[Outfit] font-bold text-text-primary tracking-tighter"
        >
          Frysccou<span class="text-accent">.</span>
        </a>
        <p
          class="text-text-muted text-xs mt-1 font-medium uppercase tracking-widest"
          data-i18n="hero.role"
        >
          {t.hero.role}
        </p>
      </div>

      <div class="flex items-center gap-4">
        <a
          href="https://github.com/esspindola"
          target="_blank"
          rel="noopener noreferrer"
          class="w-12 h-12 rounded-2xl bg-gray-50 hover:bg-accent border border-gray-100 hover:border-accent flex items-center justify-center text-text-secondary hover:text-white transition-all duration-500 hover:shadow-xl hover:shadow-accent/40 hover:-translate-y-1"
          aria-label="GitHub"
        >
          <Github class="w-6 h-6" />
        </a>
        <a
          href="https://www.linkedin.com/in/espindola-francisco"
          target="_blank"
          rel="noopener noreferrer"
          class="w-12 h-12 rounded-2xl bg-gray-50 hover:bg-accent border border-gray-100 hover:border-accent flex items-center justify-center text-text-secondary hover:text-white transition-all duration-500 hover:shadow-xl hover:shadow-accent/40 hover:-translate-y-1"
          aria-label="LinkedIn"
        >
          <Linkedin class="w-6 h-6" />
        </a>
        <a
          href="https://instagram.com/frysccou"
          target="_blank"
          rel="noopener noreferrer"
          class="w-12 h-12 rounded-2xl bg-gray-50 hover:bg-accent border border-gray-100 hover:border-accent flex items-center justify-center text-text-secondary hover:text-white transition-all duration-500 hover:shadow-xl hover:shadow-accent/40 hover:-translate-y-1"
          aria-label="Instagram"
        >
          <Instagram class="w-6 h-6" />
        </a>
      </div>

      <div class="text-right">
        <p
          class="text-text-muted text-sm font-medium flex items-center justify-end gap-2"
        >
          <span data-i18n="footer.madeWith">{t.footer.madeWith}</span>
          <Heart
            class="w-4 h-4 text-rose-accent fill-rose-accent animate-pulse"
          />
          <span data-i18n="footer.by">{t.footer.by}</span>
        </p>
        <p
          class="text-text-muted text-[10px] mt-1 font-bold uppercase tracking-widest opacity-50"
        >
          © {currentYear} • <span data-i18n="footer.rights"
            >{t.footer.rights}</span
          >
        </p>
      </div>
    </div>
  </div>
</footer>
