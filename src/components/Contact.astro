---
import { translations } from "../i18n/translations.js";
const t = translations.en;
---

<section id="contact" class="py-32 relative">
  <div class="max-w-4xl mx-auto px-6 relative z-10">
    <div class="text-center contact-content opacity-0 translate-y-10">
      <div class="mb-12 flex justify-center">
        <div
          class="w-24 h-24 rounded-full border-4 border-white shadow-2xl shadow-accent-soft/50 ring-1 ring-gray-100 overflow-hidden"
        >
          <img
            src="/me.png"
            alt="Francisco"
            class="w-full h-full object-cover"
          />
        </div>
      </div>

      <h2
        class="text-4xl md:text-5xl lg:text-7xl font-[Outfit] font-bold mb-6 text-text-primary"
        data-i18n="contact.title"
      >
        {t.contact.title}
      </h2>
      <p
        class="text-text-muted text-lg md:text-xl mb-12 max-w-2xl mx-auto"
        data-i18n="contact.subtitle"
      >
        {t.contact.subtitle}
      </p>

      <div
        class="flex flex-col sm:flex-row items-center justify-center gap-6 mb-16"
      >
        <a
          href="mailto:franespindola71@gmail.com"
          class="group px-12 py-5 bg-text-primary text-white rounded-2xl font-bold text-lg transition-all duration-300 hover:bg-accent hover:scale-105 hover:shadow-2xl hover:shadow-accent/40"
        >
          <span data-i18n="contact.cta">{t.contact.cta}</span>
          <span
            class="inline-block ml-2 transition-transform duration-300 group-hover:translate-x-1"
            >â†’</span
          >
        </a>
      </div>

      <div class="flex items-center justify-center gap-4 text-text-muted mb-12">
        <div class="h-px w-16 bg-gray-200"></div>
        <span
          class="text-xs font-bold uppercase tracking-widest"
          data-i18n="contact.or">{t.contact.or}</span
        >
        <div class="h-px w-16 bg-gray-200"></div>
      </div>

      <a
        href="https://dot-studio.site"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block group w-full max-w-md"
      >
        <div
          class="bg-white rounded-3xl p-8 border border-gray-100 hover:border-accent transition-all duration-500 hover:shadow-2xl hover:shadow-accent-soft/30 hover:-translate-y-2 text-center"
        >
          <div class="flex flex-col items-center gap-4 mb-6">
            <div
              class="w-20 h-20 rounded-2xl bg-white border border-gray-100 flex items-center justify-center overflow-hidden shadow-xl shadow-gray-200/50"
            >
              <img
                src="/work/dot-logo.svg"
                alt="Dot Studio"
                class="w-12 h-12 object-contain"
              />
            </div>
            <div>
              <h3 class="text-2xl font-[Outfit] font-bold text-text-primary">
                Dot Studio
              </h3>
              <p class="text-accent font-bold tracking-wider">
                dot-studio.site
              </p>
            </div>
          </div>
          <p
            class="text-text-muted text-base leading-relaxed mb-8"
            data-i18n="contact.studioDescription"
          >
            {t.contact.studioDescription}
          </p>
          <div
            class="flex items-center justify-center gap-2 text-text-primary font-bold transition-all duration-300 group-hover:text-accent group-hover:gap-4"
          >
            <span>Visit Studio Website</span>
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
        </div>
      </a>
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    gsap.to(".contact-content", {
      scrollTrigger: {
        trigger: "#contact",
        start: "top 80%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      y: 0,
      duration: 1.2,
      ease: "power3.out",
    });
  });
</script>
