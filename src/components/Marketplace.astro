---
import { translations } from "../i18n/translations.js";
const t = translations.en;

const technologies = [
  "React",
  "Portfolio",
  "Marketing",
  "Astro 5",
  "Professional",
  "Tailwind CSS 4",
  "Framer Motion",
  "Lucide React",
  "Hexagonal Architecture",
];
---

<section id="marketplace" class="py-32 relative overflow-hidden bg-white/50">
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="text-center mb-16 marketplace-header opacity-0 translate-y-10">
      <h2
        class="text-4xl md:text-5xl font-[Outfit] font-bold mb-4 text-text-primary"
        data-i18n="marketplace.title"
      >
        {t.marketplace.title}
      </h2>
      <p
        class="text-text-muted text-lg max-w-2xl mx-auto"
        data-i18n="marketplace.subtitle"
      >
        {t.marketplace.subtitle}
      </p>
    </div>

    <div class="grid lg:grid-cols-12 gap-12 items-start">
      <!-- Info Card -->
      <div
        class="lg:col-span-7 marketplace-card opacity-0 -translate-x-5 bg-white rounded-3xl overflow-hidden border border-gray-100 shadow-xl shadow-accent-soft/10"
      >
        <div class="relative aspect-video group bg-gray-900 overflow-hidden">
          <div
            id="media-container"
            class="w-full h-full relative cursor-pointer"
          >
            <img
              id="template-image"
              src="/templates/landing-template.png"
              alt="Landing Page Professional Template"
              class="w-full h-full object-cover transition-transform duration-700"
            />
            <div
              id="play-overlay"
              class="absolute inset-0 flex items-center justify-center bg-black/30 group-hover:bg-black/50 transition-all duration-300"
            >
              <div
                class="w-20 h-20 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center border border-white/30 transform group-hover:scale-110 transition-transform duration-300"
              >
                <svg
                  class="w-8 h-8 text-white fill-current"
                  viewBox="0 0 24 24"
                >
                  <path d="M8 5v14l11-7z"></path>
                </svg>
              </div>
              <p
                class="absolute bottom-8 text-white font-medium tracking-wide text-sm bg-black/40 px-4 py-2 rounded-full backdrop-blur-sm"
                data-i18n="marketplace.previewBtn"
              >
                {t.marketplace.previewBtn}
              </p>
            </div>
          </div>
          <video
            id="template-video"
            class="hidden w-full h-full object-cover"
            controls
            playsinline
          >
            <source src="/preview/preview.mp4" type="video/mp4" />
          </video>
        </div>

        <div class="p-8 md:p-10">
          <div class="flex flex-wrap gap-2 mb-6">
            {
              technologies.map((tech) => (
                <span class="px-3 py-1 bg-gray-50 text-text-secondary text-xs font-semibold rounded-lg border border-gray-100">
                  {tech}
                </span>
              ))
            }
          </div>
          <h3
            class="text-3xl font-[Outfit] font-bold text-text-primary mb-4"
            data-i18n="marketplace.templateTitle"
          >
            {t.marketplace.templateTitle}
          </h3>
          <p
            class="text-text-muted text-base leading-relaxed mb-8"
            data-i18n="marketplace.templateDesc"
          >
            {t.marketplace.templateDesc}
          </p>

          <div
            class="bg-accent-soft/20 rounded-2xl p-6 border border-accent/10"
          >
            <p
              class="text-sm font-bold text-accent uppercase tracking-wider mb-4 flex items-center gap-2"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              <span data-i18n="marketplace.postPaymentTitle">
                {t.marketplace.postPaymentTitle}
              </span>
            </p>
            <p
              class="text-text-secondary text-sm mb-4"
              data-i18n="marketplace.postPaymentDesc"
            >
              {t.marketplace.postPaymentDesc}
            </p>
            <div class="grid sm:grid-cols-2 gap-4">
              <div
                class="flex items-center gap-3 bg-white p-3 rounded-xl border border-gray-100"
              >
                <div
                  class="w-8 h-8 bg-accent/10 rounded-lg flex items-center justify-center text-accent"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <span class="text-xs font-medium text-text-primary truncate"
                  >dot_studio_dev@gmail.com</span
                >
              </div>
              <div
                class="flex items-center gap-3 bg-white p-3 rounded-xl border border-gray-100"
              >
                <div
                  class="w-8 h-8 bg-rose-soft rounded-lg flex items-center justify-center text-rose-accent"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <span class="text-xs font-medium text-text-primary truncate"
                  >franespindola71@gmail.com</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Payment Section -->
      <div
        class="lg:col-span-5 flex flex-col gap-6 marketplace-payment opacity-0 translate-x-5"
      >
        <div
          class="bg-white rounded-4xl p-10 border border-gray-100 shadow-2xl shadow-accent-soft/20 relative overflow-hidden"
        >
          <!-- Decorative element -->
          <div
            class="absolute -top-12 -right-12 w-32 h-32 bg-accent/5 rounded-full blur-3xl"
          >
          </div>

          <div class="relative z-10">
            <h4
              class="text-2xl font-[Outfit] font-bold text-text-primary mb-2"
              data-i18n="marketplace.buyTitle"
            >
              {t.marketplace.buyTitle}
            </h4>
            <p
              class="text-text-muted text-sm mb-8"
              data-i18n="marketplace.buySubtitle"
            >
              {t.marketplace.buySubtitle}
            </p>

            <!-- Price Display with animated transition -->
            <div class="mb-10 min-h-25 flex items-center">
              <div id="price-ars" class="w-full">
                <span
                  class="text-text-muted text-xs font-bold uppercase tracking-widest mb-1 block"
                  data-i18n="marketplace.investment"
                  >{t.marketplace.investment}</span
                >
                <div class="flex items-baseline gap-3">
                  <span
                    class="text-6xl font-[Outfit] font-extrabold bg-linear-to-br from-accent to-purple-600 bg-clip-text text-transparent tracking-tight"
                    >$35.000</span
                  >
                  <span class="text-xl font-bold text-accent/60">ARS</span>
                </div>
              </div>
              <div id="price-usd" class="w-full hidden">
                <span
                  class="text-text-muted text-xs font-bold uppercase tracking-widest mb-1 block"
                  data-i18n="marketplace.investment"
                  >{t.marketplace.investment}</span
                >
                <div class="flex items-baseline gap-3">
                  <span
                    class="text-6xl font-[Outfit] font-extrabold bg-linear-to-br from-accent to-purple-600 bg-clip-text text-transparent tracking-tight"
                    >$30</span
                  >
                  <span class="text-xl font-bold text-accent/60">USD</span>
                </div>
              </div>
            </div>

            <!-- New Switcher UI -->
            <div
              class="bg-gray-50 p-2 rounded-2xl flex relative mb-8 border border-gray-100"
            >
              <div
                id="switcher-bg"
                class="absolute top-2 left-2 bottom-2 w-[calc(50%-8px)] bg-white rounded-xl shadow-md transition-all duration-500 ease-out z-0 border border-gray-100"
              >
              </div>
              <button
                id="btn-ars"
                class="flex-1 py-3 text-sm font-bold z-10 text-text-primary transition-colors duration-300"
                data-i18n="marketplace.arsLabel"
              >
                {t.marketplace.arsLabel}
              </button>
              <button
                id="btn-usd"
                class="flex-1 py-3 text-sm font-bold z-10 text-text-muted transition-colors duration-300 hover:text-text-primary"
                data-i18n="marketplace.usdLabel"
              >
                {t.marketplace.usdLabel}
              </button>
            </div>

            <!-- Action Area -->
            <div id="action-ars" class="block space-y-4">
              <a
                href="https://mpago.la/2EQWepT"
                target="_blank"
                rel="noopener noreferrer"
                class="group relative block w-full py-5 bg-linear-to-r from-accent to-purple-600 text-white rounded-2xl font-bold text-center transition-all duration-300 hover:shadow-xl hover:shadow-accent/40 overflow-hidden"
              >
                <span
                  class="relative z-10 flex items-center justify-center gap-3"
                >
                  <span data-i18n="marketplace.mpLabel">
                    {t.marketplace.mpLabel}
                  </span>
                  <svg
                    class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </span>
                <div
                  class="absolute inset-0 bg-linear-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"
                >
                </div>
              </a>
              <p
                class="text-[10px] text-center text-text-muted font-medium uppercase tracking-widest"
                data-i18n="marketplace.mpSecure"
              >
                {t.marketplace.mpSecure}
              </p>
            </div>

            <div id="action-usd" class="hidden space-y-6">
              <div
                class="p-6 bg-accent-soft/30 rounded-2xl border border-dashed border-accent/20"
              >
                <div class="flex items-center gap-4 mb-5">
                  <div
                    class="w-12 h-12 bg-white rounded-2xl flex items-center justify-center text-accent shadow-sm border border-gray-100"
                  >
                    <svg
                      class="w-7 h-7"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <p
                      class="text-xs font-bold text-text-primary uppercase tracking-wider"
                      data-i18n="marketplace.cryptoTitle"
                    >
                      {t.marketplace.cryptoTitle}
                    </p>
                    <p
                      class="text-[10px] text-text-muted"
                      data-i18n="marketplace.cryptoSubtitle"
                    >
                      {t.marketplace.cryptoSubtitle}
                    </p>
                  </div>
                </div>

                <div
                  class="bg-white p-4 rounded-xl border border-gray-100 mb-5 break-all shadow-sm"
                >
                  <p
                    class="text-[10px] font-bold text-text-muted uppercase mb-2"
                    data-i18n="marketplace.walletLabel"
                  >
                    {t.marketplace.walletLabel}
                  </p>
                  <code
                    id="wallet-address"
                    class="text-xs font-mono font-medium text-text-primary"
                    >0xf2f000a27e36778597f79d9fb38ce31841a3f028</code
                  >
                </div>

                <button
                  id="copy-address"
                  class="w-full py-4 bg-white border border-gray-200 text-text-primary rounded-xl text-sm font-bold transition-all duration-300 hover:border-accent hover:bg-accent-soft/20 flex items-center justify-center gap-2"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"
                    ></path>
                  </svg>
                  <span id="copy-text" data-i18n="marketplace.copyAddress">
                    {t.marketplace.copyAddress}
                  </span>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Help Card -->
        <div
          class="bg-linear-to-br from-accent-soft to-white p-8 rounded-4xl border border-accent/10 shadow-xl shadow-accent-soft/20 overflow-hidden relative group"
        >
          <!-- Animated gradient blob -->
          <div
            class="absolute -bottom-10 -right-10 w-32 h-32 bg-accent/20 rounded-full blur-3xl group-hover:bg-accent/30 transition-colors duration-500"
          >
          </div>

          <div class="flex items-start justify-between relative z-10">
            <div class="max-w-[70%]">
              <h4
                class="text-xl font-[Outfit] font-bold mb-2 text-text-primary"
                data-i18n="marketplace.helpTitle"
              >
                {t.marketplace.helpTitle}
              </h4>
              <p
                class="text-text-secondary text-sm mb-0"
                data-i18n="marketplace.helpDesc"
              >
                {t.marketplace.helpDesc}
              </p>
            </div>
            <div
              class="w-12 h-12 bg-white rounded-xl flex items-center justify-center text-accent shadow-sm border border-accent/10"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                ></path>
              </svg>
            </div>
          </div>
          <a
            href="#contact"
            class="mt-6 flex items-center justify-center gap-2 text-sm font-bold bg-text-primary text-white w-full py-4 rounded-xl hover:bg-accent hover:shadow-lg hover:shadow-accent/20 transition-all duration-300 relative z-10"
            data-i18n="marketplace.helpCta"
          >
            {t.marketplace.helpCta}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { translations } from "../i18n/translations.js";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Animations
    gsap.to(".marketplace-header", {
      scrollTrigger: {
        trigger: "#marketplace",
        start: "top 85%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      y: 0,
      duration: 1,
      ease: "power3.out",
    });

    gsap.to(".marketplace-card", {
      scrollTrigger: {
        trigger: "#marketplace",
        start: "top 70%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      x: 0,
      duration: 1,
      ease: "power3.out",
    });

    gsap.to(".marketplace-payment", {
      scrollTrigger: {
        trigger: "#marketplace",
        start: "top 70%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      x: 0,
      duration: 1,
      delay: 0.2,
      ease: "power3.out",
    });

    // Video Logic
    const mediaContainer = document.getElementById("media-container");
    const templateVideo = document.getElementById(
      "template-video",
    ) as HTMLVideoElement;

    mediaContainer?.addEventListener("click", () => {
      mediaContainer.classList.add("hidden");
      templateVideo?.classList.remove("hidden");
      templateVideo?.play();
    });

    // Reinvented Switcher Logic
    const btnArs = document.getElementById("btn-ars");
    const btnUsd = document.getElementById("btn-usd");
    const switcherBg = document.getElementById("switcher-bg");
    const priceArs = document.getElementById("price-ars");
    const priceUsd = document.getElementById("price-usd");
    const actionArs = document.getElementById("action-ars");
    const actionUsd = document.getElementById("action-usd");

    function updateUI(toUsd: boolean) {
      if (toUsd) {
        switcherBg?.style.setProperty("left", "calc(50%)");
        btnUsd?.classList.replace("text-text-muted", "text-text-primary");
        btnArs?.classList.replace("text-text-primary", "text-text-muted");

        priceArs?.classList.add("hidden");
        priceUsd?.classList.remove("hidden");
        actionArs?.classList.add("hidden");
        actionUsd?.classList.remove("hidden");
      } else {
        switcherBg?.style.setProperty("left", "8px");
        btnArs?.classList.replace("text-text-muted", "text-text-primary");
        btnUsd?.classList.replace("text-text-primary", "text-text-muted");

        priceUsd?.classList.add("hidden");
        priceArs?.classList.remove("hidden");
        actionUsd?.classList.add("hidden");
        actionArs?.classList.remove("hidden");
      }
    }

    btnArs?.addEventListener("click", () => updateUI(false));
    btnUsd?.addEventListener("click", () => updateUI(true));

    // Copy Address
    const copyBtn = document.getElementById("copy-address");
    const copyText = document.getElementById("copy-text");
    const walletAddress =
      document.getElementById("wallet-address")?.textContent;

    copyBtn?.addEventListener("click", () => {
      if (walletAddress) {
        navigator.clipboard.writeText(walletAddress);

        const lang = (document.documentElement.lang as "en" | "es") || "en";
        const t = (translations as any)[lang];

        if (copyText) {
          const originalText = copyText.innerHTML;
          copyText.textContent = t.marketplace.copied;
          copyBtn.classList.add(
            "!text-green-600",
            "border-green-200",
            "bg-green-50",
          );

          setTimeout(() => {
            copyText.innerHTML = originalText;
            copyBtn.classList.remove(
              "!text-green-600",
              "border-green-200",
              "bg-green-50",
            );
          }, 2000);
        }
      }
    });
  });
</script>
