---
import { translations } from "../i18n/translations.js";
import {
  Play,
  ArrowRight,
  CircleDollarSign,
  Copy,
  MessageCircle,
  CheckCircle2,
  Mail,
  User,
  Link2,
} from "lucide-astro";
const t = translations.en;

const products = [
  {
    id: "landing",
    name: t.marketplace.items.landing.name,
    priceARS: t.marketplace.items.landing.priceARS,
    priceUSD: t.marketplace.items.landing.priceUSD,
    mpLink: "https://mpago.la/2EQWepT",
    image: "/templates/landing-template.png",
    video: "/preview/preview.mp4",
    desc: t.marketplace.items.landing.aboutDesc,
    topics: [
      "React",
      "Portfolio",
      "Marketing",
      "Astro 5",
      "Professional",
      "Tailwind CSS 4",
      "Framer Motion",
      "Lucide React",
      "Hexagonal Architecture",
    ],
  },
  {
    id: "blog",
    name: t.marketplace.items.blog.name,
    priceARS: t.marketplace.items.blog.priceARS,
    priceUSD: t.marketplace.items.blog.priceUSD,
    mpLink: "https://mpago.la/2qSZUuE",
    image: "/templates/blog-template.png",
    video: "/preview/blog-preview.mp4",
    desc: t.marketplace.items.blog.aboutDesc,
    topics: [
      "Blog",
      "SEO Optimized",
      "Astro 5",
      "Content Collections",
      "Dynamic Routing",
      "Tailwind CSS 4",
      "Framer Motion",
      "Responsive Design",
      "TypeScript",
    ],
  },
];
---

<section
  id="marketplace"
  class="py-32 relative overflow-hidden bg-white/50"
  data-products={JSON.stringify(products)}
>
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="text-center mb-16 marketplace-header opacity-0 translate-y-10">
      <h2
        class="text-4xl md:text-5xl font-[Outfit] font-bold mb-4 text-text-primary"
        data-i18n="marketplace.title"
      >
        {t.marketplace.title}
      </h2>
      <p
        class="text-text-muted text-lg max-w-2xl mx-auto"
        data-i18n="marketplace.subtitle"
      >
        {t.marketplace.subtitle}
      </p>
    </div>

    <!-- Showroom Grid -->
    <div
      class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16 showroom-grid opacity-0 translate-y-10"
    >
      {
        products.map((product) => (
          <button
            class="showroom-item group relative bg-white rounded-3xl overflow-hidden border border-gray-100 shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer text-left"
            data-product-id={product.id}
            id={`btn-${product.id}`}
          >
            <div class="aspect-video overflow-hidden">
              <img
                src={product.image}
                alt={product.name}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                <span
                  class="bg-white text-text-primary font-bold px-6 py-2 rounded-full transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300"
                  data-i18n="marketplace.buyNow"
                >
                  {t.marketplace.buyNow}
                </span>
              </div>
            </div>
            <div class="p-6">
              <h3
                class="text-xl font-[Outfit] font-bold text-text-primary mb-2"
                data-i18n={`marketplace.items.${product.id}.name`}
              >
                {product.name}
              </h3>
              <div class="flex items-center gap-3">
                <span
                  class="text-accent font-bold"
                  data-i18n={`marketplace.items.${product.id}.priceARS`}
                >
                  {product.priceARS}
                </span>
                <span class="w-1 h-1 bg-gray-300 rounded-full" />
                <span
                  class="text-text-muted font-bold text-sm"
                  data-i18n={`marketplace.items.${product.id}.priceUSD`}
                >
                  {product.priceUSD}
                </span>
              </div>
            </div>
          </button>
        ))
      }
    </div>

    <!-- Active Product Display -->
    <div class="grid lg:grid-cols-12 gap-12 items-start" id="display-area">
      <!-- Info Card -->
      <div
        class="lg:col-span-7 marketplace-card opacity-0 -translate-x-5 bg-white rounded-3xl overflow-hidden border border-gray-100 shadow-xl shadow-accent-soft/10"
      >
        <div class="relative aspect-video group bg-gray-900 overflow-hidden">
          <div
            id="media-container"
            class="w-full h-full relative cursor-pointer"
          >
            <img
              id="template-image"
              src={products[0].image}
              alt="Template Preview"
              class="w-full h-full object-cover transition-transform duration-700"
            />
            <div
              id="play-overlay"
              class="absolute inset-0 flex items-center justify-center bg-black/30 group-hover:bg-black/50 transition-all duration-300"
            >
              <div
                class="w-20 h-20 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center border border-white/30 transform group-hover:scale-110 transition-transform duration-300"
              >
                <Play class="w-8 h-8 text-white fill-current" />
              </div>
              <p
                class="absolute bottom-8 text-white font-medium tracking-wide text-sm bg-black/40 px-4 py-2 rounded-full backdrop-blur-sm"
                data-i18n="marketplace.previewBtn"
              >
                {t.marketplace.previewBtn}
              </p>
            </div>
          </div>
          <video
            id="template-video"
            class="hidden w-full h-full object-cover"
            controls
            playsinline
            src={products[0].video}
          >
          </video>
        </div>

        <div class="p-8 md:p-10">
          <div class="flex flex-wrap gap-2 mb-6" id="active-topics">
            {
              products[0].topics.map((tech) => (
                <span class="px-3 py-1 bg-gray-50 text-text-secondary text-xs font-semibold rounded-lg border border-gray-100">
                  {tech}
                </span>
              ))
            }
          </div>
          <h3
            class="text-3xl font-[Outfit] font-bold text-text-primary mb-4"
            id="active-title"
            data-i18n={`marketplace.items.landing.name`}
          >
            {products[0].name}
          </h3>
          <p
            class="text-text-muted text-base leading-relaxed mb-8"
            id="active-desc"
            data-i18n={`marketplace.items.landing.aboutDesc`}
          >
            {products[0].desc}
          </p>
        </div>
      </div>

      <!-- Payment Section -->
      <div
        class="lg:col-span-5 flex flex-col gap-6 marketplace-payment opacity-0 translate-x-5"
      >
        <div
          class="bg-white rounded-4xl p-10 border border-gray-100 shadow-2xl shadow-accent-soft/20 relative overflow-hidden"
        >
          <div
            class="absolute -top-12 -right-12 w-32 h-32 bg-accent/5 rounded-full blur-3xl"
          >
          </div>

          <div class="relative z-10">
            <h4
              class="text-2xl font-[Outfit] font-bold text-text-primary mb-2"
              data-i18n="marketplace.buyTitle"
            >
              {t.marketplace.buyTitle}
            </h4>
            <p
              class="text-text-muted text-sm mb-8"
              data-i18n="marketplace.buySubtitle"
            >
              {t.marketplace.buySubtitle}
            </p>

            <div class="mb-10 min-h-25 flex items-center">
              <div id="price-ars" class="w-full">
                <span
                  class="text-text-muted text-xs font-bold uppercase tracking-widest mb-1 block"
                  data-i18n="marketplace.investment"
                  >{t.marketplace.investment}</span
                >
                <div class="flex items-baseline gap-3">
                  <span
                    id="amount-ars"
                    class="text-6xl font-[Outfit] font-extrabold bg-linear-to-br from-accent to-purple-600 bg-clip-text text-transparent tracking-tight"
                    >{products[0].priceARS}</span
                  >
                  <span class="text-xl font-bold text-accent/60">ARS</span>
                </div>
              </div>
              <div id="price-usd" class="w-full hidden">
                <span
                  class="text-text-muted text-xs font-bold uppercase tracking-widest mb-1 block"
                  data-i18n="marketplace.investment"
                  >{t.marketplace.investment}</span
                >
                <div class="flex items-baseline gap-3">
                  <span
                    id="amount-usd"
                    class="text-6xl font-[Outfit] font-extrabold bg-linear-to-br from-accent to-purple-600 bg-clip-text text-transparent tracking-tight"
                    >{products[0].priceUSD}</span
                  >
                  <span class="text-xl font-bold text-accent/60">USD</span>
                </div>
              </div>
            </div>

            <div
              class="bg-gray-50 p-2 rounded-2xl flex relative mb-8 border border-gray-100"
            >
              <div
                id="switcher-bg"
                class="absolute top-2 left-2 bottom-2 w-[calc(50%-8px)] bg-white rounded-xl shadow-md transition-all duration-500 ease-out z-0 border border-gray-100"
              >
              </div>
              <button
                id="btn-ars"
                class="flex-1 py-3 text-sm font-bold z-10 text-text-primary transition-colors duration-300"
                data-i18n="marketplace.arsLabel"
              >
                {t.marketplace.arsLabel}
              </button>
              <button
                id="btn-usd"
                class="flex-1 py-3 text-sm font-bold z-10 text-text-muted transition-colors duration-300 hover:text-text-primary"
                data-i18n="marketplace.usdLabel"
              >
                {t.marketplace.usdLabel}
              </button>
            </div>

            <div id="action-ars" class="block space-y-4">
              <a
                id="mp-link"
                href={products[0].mpLink}
                target="_blank"
                rel="noopener noreferrer"
                class="group relative block w-full py-5 bg-linear-to-r from-accent to-purple-600 text-white rounded-2xl font-bold text-center transition-all duration-300 hover:shadow-xl hover:shadow-accent/40 overflow-hidden"
              >
                <span
                  class="relative z-10 flex items-center justify-center gap-3"
                >
                  <span data-i18n="marketplace.mpLabel">
                    {t.marketplace.mpLabel}
                  </span>
                  <ArrowRight
                    class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1"
                  />
                </span>
                <div
                  class="absolute inset-0 bg-linear-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"
                >
                </div>
              </a>
              <p
                class="text-[10px] text-center text-text-muted font-medium uppercase tracking-widest"
                data-i18n="marketplace.mpSecure"
              >
                {t.marketplace.mpSecure}
              </p>
            </div>

            <div id="action-usd" class="hidden space-y-6">
              <div
                class="p-6 bg-accent-soft/30 rounded-2xl border border-dashed border-accent/20"
              >
                <div class="flex items-center gap-4 mb-5">
                  <div
                    class="w-12 h-12 bg-white rounded-2xl flex items-center justify-center text-accent shadow-sm border border-gray-100"
                  >
                    <CircleDollarSign class="w-7 h-7" />
                  </div>
                  <div>
                    <p
                      class="text-xs font-bold text-text-primary uppercase tracking-wider"
                      data-i18n="marketplace.cryptoTitle"
                    >
                      {t.marketplace.cryptoTitle}
                    </p>
                    <p
                      class="text-[10px] text-text-muted"
                      data-i18n="marketplace.cryptoSubtitle"
                    >
                      {t.marketplace.cryptoSubtitle}
                    </p>
                  </div>
                </div>

                <div
                  class="bg-white p-4 rounded-xl border border-gray-100 mb-5 break-all shadow-sm"
                >
                  <p
                    class="text-[10px] font-bold text-text-muted uppercase mb-2"
                    data-i18n="marketplace.walletLabel"
                  >
                    {t.marketplace.walletLabel}
                  </p>
                  <code
                    id="wallet-address"
                    class="text-xs font-mono font-medium text-text-primary"
                    >0xf2f000a27e36778597f79d9fb38ce31841a3f028</code
                  >
                </div>

                <button
                  id="copy-address"
                  class="w-full py-4 bg-white border border-gray-200 text-text-primary rounded-xl text-sm font-bold transition-all duration-300 hover:border-accent hover:bg-accent-soft/20 flex items-center justify-center gap-2"
                >
                  <Copy class="w-4 h-4" />
                  <span id="copy-text" data-i18n="marketplace.copyAddress">
                    {t.marketplace.copyAddress}
                  </span>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Help Card -->
        <div
          class="bg-linear-to-br from-accent-soft to-white p-8 rounded-4xl border border-accent/10 shadow-xl shadow-accent-soft/20 overflow-hidden relative group"
        >
          <div
            class="absolute -bottom-10 -right-10 w-32 h-32 bg-accent/20 rounded-full blur-3xl group-hover:bg-accent/30 transition-colors duration-500"
          >
          </div>

          <div class="flex items-start justify-between relative z-10">
            <div class="max-w-[70%]">
              <h4
                class="text-xl font-[Outfit] font-bold mb-2 text-text-primary"
                data-i18n="marketplace.helpTitle"
              >
                {t.marketplace.helpTitle}
              </h4>
              <p
                class="text-text-secondary text-sm mb-0"
                data-i18n="marketplace.helpDesc"
              >
                {t.marketplace.helpDesc}
              </p>
            </div>
            <div
              class="w-12 h-12 bg-white rounded-xl flex items-center justify-center text-accent shadow-sm border border-accent/10"
            >
              <MessageCircle class="w-6 h-6" />
            </div>
          </div>
          <a
            href="#contact"
            class="mt-6 flex items-center justify-center gap-2 text-sm font-bold bg-text-primary text-white w-full py-4 rounded-xl hover:bg-accent hover:shadow-lg hover:shadow-accent/20 transition-all duration-300 relative z-10"
            data-i18n="marketplace.helpCta"
          >
            {t.marketplace.helpCta}
          </a>
        </div>
      </div>
    </div>

    <!-- Post-Payment Section (Always Visible) -->
    <div
      class="mt-16 bg-off-white/80 backdrop-blur-md rounded-4xl p-8 md:p-12 border border-gray-100 shadow-xl opacity-0 translate-y-10 post-payment-section"
    >
      <div class="flex items-center gap-4 mb-8">
        <div
          class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center text-green-600"
        >
          <CheckCircle2 class="w-8 h-8" />
        </div>
        <div>
          <h4
            class="text-2xl font-[Outfit] font-bold text-text-primary"
            data-i18n="marketplace.postPaymentTitle"
          >
            {t.marketplace.postPaymentTitle}
          </h4>
          <p class="text-text-muted" data-i18n="marketplace.postPaymentDesc">
            {t.marketplace.postPaymentDesc}
          </p>
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div class="space-y-4">
          <div class="flex items-center gap-3 text-text-secondary font-medium">
            <Mail class="w-5 h-5 text-accent" />
            <span data-i18n="marketplace.githubEmail"
              >{t.marketplace.githubEmail}</span
            >
          </div>
          <div class="flex items-center gap-3 text-text-secondary font-medium">
            <User class="w-5 h-5 text-accent" />
            <span data-i18n="marketplace.githubUser"
              >{t.marketplace.githubUser}</span
            >
          </div>
          <div class="flex items-center gap-3 text-text-secondary font-medium">
            <Link2 class="w-5 h-5 text-accent" />
            <span data-i18n="marketplace.githubLink"
              >{t.marketplace.githubLink}</span
            >
          </div>
        </div>

        <div class="flex flex-col gap-4">
          <a
            href="mailto:dot_studio_dev@gmail.com"
            class="text-xl font-bold text-accent hover:text-text-primary transition-colors flex items-center gap-2"
          >
            <span class="w-2 h-2 bg-accent rounded-full"></span>
            dot_studio_dev@gmail.com
          </a>
          <span
            class="text-xs font-bold text-text-muted uppercase tracking-widest pl-4"
            data-i18n="marketplace.orAlsoTo">{t.marketplace.orAlsoTo}</span
          >
          <a
            href="mailto:franespindola71@gmail.com"
            class="text-xl font-bold text-rose-accent hover:text-text-primary transition-colors flex items-center gap-2"
          >
            <span class="w-2 h-2 bg-rose-accent rounded-full"></span>
            franespindola71@gmail.com
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { translations } from "../i18n/translations.js";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    const section = document.getElementById("marketplace");
    if (!section) return;

    const products = JSON.parse(section.dataset.products || "[]");

    // Entrance Animations
    gsap.to(".marketplace-header", {
      scrollTrigger: {
        trigger: "#marketplace",
        start: "top 85%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      y: 0,
      duration: 1,
      ease: "power3.out",
    });

    gsap.to(".showroom-grid", {
      scrollTrigger: {
        trigger: ".showroom-grid",
        start: "top 85%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      y: 0,
      duration: 1,
      ease: "power3.out",
    });

    gsap.to(".marketplace-card", {
      scrollTrigger: {
        trigger: "#display-area",
        start: "top 80%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      x: 0,
      duration: 1,
      ease: "power3.out",
    });

    gsap.to(".marketplace-payment", {
      scrollTrigger: {
        trigger: "#display-area",
        start: "top 80%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      x: 0,
      duration: 1,
      delay: 0.2,
      ease: "power3.out",
    });

    gsap.to(".post-payment-section", {
      scrollTrigger: {
        trigger: ".post-payment-section",
        start: "top 90%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      y: 0,
      duration: 1,
      ease: "power3.out",
    });

    // Elements
    const mediaContainer = document.getElementById("media-container");
    const playOverlay = document.getElementById("play-overlay");
    const templateImage = document.getElementById(
      "template-image",
    ) as HTMLImageElement | null;
    const templateVideo = document.getElementById(
      "template-video",
    ) as HTMLVideoElement | null;
    const activeTitle = document.getElementById("active-title");
    const activeDesc = document.getElementById("active-desc");
    const activeTopics = document.getElementById("active-topics");
    const amountArs = document.getElementById("amount-ars");
    const amountUsd = document.getElementById("amount-usd");
    const mpLink = document.getElementById(
      "mp-link",
    ) as HTMLAnchorElement | null;
    const showroomItems = document.querySelectorAll(".showroom-item");

    // Switcher Elements
    const btnArs = document.getElementById("btn-ars");
    const btnUsd = document.getElementById("btn-usd");
    const switcherBg = document.getElementById("switcher-bg");
    const priceArs = document.getElementById("price-ars");
    const priceUsd = document.getElementById("price-usd");
    const actionArs = document.getElementById("action-ars");
    const actionUsd = document.getElementById("action-usd");

    // Video Logic
    mediaContainer?.addEventListener("click", () => {
      playOverlay?.classList.add("hidden");
      templateImage?.classList.add("hidden");
      templateVideo?.classList.remove("hidden");
      templateVideo?.play();
    });

    function resetVideo() {
      playOverlay?.classList.remove("hidden");
      templateImage?.classList.remove("hidden");
      templateVideo?.classList.add("hidden");
      templateVideo?.pause();
    }

    // Product Switcher Logic
    function updateProduct(productId: string) {
      const product = products.find((p: any) => p.id === productId);
      if (!product) return;

      showroomItems.forEach((btn) => {
        btn.classList.remove("border-accent", "ring-2", "ring-accent");
      });
      document
        .getElementById(`btn-${productId}`)
        ?.classList.add("border-accent", "ring-2", "ring-accent");

      // Update basic info
      resetVideo();
      if (templateImage) templateImage.src = product.image;
      if (templateVideo) templateVideo.src = product.video;

      if (activeTitle) {
        activeTitle.textContent = product.name;
        activeTitle.setAttribute(
          "data-i18n",
          `marketplace.items.${productId}.name`,
        );
      }

      if (activeDesc) {
        activeDesc.textContent = product.desc;
        activeDesc.setAttribute(
          "data-i18n",
          `marketplace.items.${productId}.aboutDesc`,
        );
      }

      if (amountArs) amountArs.textContent = product.priceARS;
      if (amountUsd) amountUsd.textContent = product.priceUSD;
      if (mpLink) mpLink.href = product.mpLink;

      // Update Topics
      if (activeTopics) {
        activeTopics.innerHTML = "";
        product.topics.forEach((tech: string) => {
          const span = document.createElement("span");
          span.className =
            "px-3 py-1 bg-gray-50 text-text-secondary text-xs font-semibold rounded-lg border border-gray-100";
          span.textContent = tech;
          activeTopics.appendChild(span);
        });
      }

      // Scroll to display
      document
        .getElementById("display-area")
        ?.scrollIntoView({ behavior: "smooth", block: "center" });
    }

    showroomItems.forEach((item) => {
      item.addEventListener("click", () => {
        const id = (item as HTMLElement).dataset.productId;
        if (id) updateProduct(id);
      });
    });

    // Currency Switcher Logic
    function updateCurrency(toUsd: boolean) {
      if (toUsd) {
        switcherBg?.style.setProperty("left", "calc(50%)");
        btnUsd?.classList.replace("text-text-muted", "text-text-primary");
        btnArs?.classList.replace("text-text-primary", "text-text-muted");

        priceArs?.classList.add("hidden");
        priceUsd?.classList.remove("hidden");
        actionArs?.classList.add("hidden");
        actionUsd?.classList.remove("hidden");
      } else {
        switcherBg?.style.setProperty("left", "8px");
        btnArs?.classList.replace("text-text-muted", "text-text-primary");
        btnUsd?.classList.replace("text-text-primary", "text-text-muted");

        priceUsd?.classList.add("hidden");
        priceArs?.classList.remove("hidden");
        actionUsd?.classList.add("hidden");
        actionArs?.classList.remove("hidden");
      }
    }

    btnArs?.addEventListener("click", () => updateCurrency(false));
    btnUsd?.addEventListener("click", () => updateCurrency(true));

    // Copy Address
    const copyBtn = document.getElementById("copy-address");
    const copyText = document.getElementById("copy-text");
    const walletAddress =
      document.getElementById("wallet-address")?.textContent;

    copyBtn?.addEventListener("click", () => {
      if (walletAddress) {
        navigator.clipboard.writeText(walletAddress);
        const lang = (document.documentElement.lang as "en" | "es") || "en";
        const tObj = (translations as any)[lang];

        if (copyText) {
          const originalText = copyText.innerHTML;
          copyText.textContent = tObj.marketplace.copied;
          copyBtn.classList.add("!border-green-200", "bg-green-50");

          setTimeout(() => {
            copyText.innerHTML = originalText;
            copyBtn.classList.remove("!border-green-200", "bg-green-50");
          }, 2000);
        }
      }
    });

    // Initialize first product as active
    document
      .getElementById("btn-landing")
      ?.classList.add("border-accent", "ring-2", "ring-accent");
  });
</script>
