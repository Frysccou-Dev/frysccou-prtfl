---
import { translations } from "../i18n/translations.js";
import { skills } from "../i18n/data.js";
const t = translations.en;

const skillCategories = [
  { id: "languages", icon: "code" },
  { id: "frontend", icon: "monitor" },
  { id: "backend", icon: "server" },
  { id: "fullstack", icon: "layers" },
  { id: "design", icon: "palette" },
  { id: "databases", icon: "database" },
  { id: "devops", icon: "terminal" },
];
---

<section id="skills" class="py-32 bg-gray-50/50 relative">
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="text-center mb-20 skills-header opacity-0 translate-y-10">
      <h2
        class="text-4xl md:text-5xl font-[Outfit] font-bold mb-4 text-text-primary"
        data-i18n="skills.title"
      >
        {t.skills.title}
      </h2>
      <p class="text-text-muted text-lg" data-i18n="skills.subtitle">
        {t.skills.subtitle}
      </p>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
    >
      {
        skillCategories.map((cat) => (
          <div class="skill-category opacity-0 translate-y-10 bg-white rounded-3xl p-6 border border-gray-100 hover:border-accent transition-all duration-500 hover:shadow-xl hover:shadow-accent-soft/20 flex flex-col">
            <div class="flex items-center gap-4 mb-6">
              <div class="w-10 h-10 rounded-xl bg-gray-50 flex items-center justify-center text-text-primary border border-gray-100">
                {cat.id === "languages" && (
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
                    />
                  </svg>
                )}
                {cat.id === "frontend" && (
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    />
                  </svg>
                )}
                {cat.id === "backend" && (
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                    />
                  </svg>
                )}
                {cat.id === "fullstack" && (
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                    />
                  </svg>
                )}
                {cat.id === "design" && (
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"
                    />
                  </svg>
                )}
                {cat.id === "databases" && (
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"
                    />
                  </svg>
                )}
                {cat.id === "devops" && (
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    />
                  </svg>
                )}
              </div>
              <h3
                class="text-sm font-bold text-text-primary uppercase tracking-wider"
                data-i18n={`skills.${cat.id}`}
              >
                {t.skills[cat.id as keyof typeof t.skills]}
              </h3>
            </div>
            <div class="flex flex-wrap gap-2">
              {(skills as any)[cat.id].map((skill: any) => (
                <span class="skill-tag px-3 py-1.5 bg-gray-50 rounded-xl text-xs font-medium text-text-secondary border border-gray-100 hover:border-accent/30 hover:bg-accent-soft/30 transition-all duration-300">
                  {skill.name}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    gsap.to(".skills-header", {
      scrollTrigger: {
        trigger: "#skills",
        start: "top 85%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      y: 0,
      duration: 1,
      ease: "power3.out",
    });

    gsap.to(".skill-category", {
      scrollTrigger: {
        trigger: "#skills",
        start: "top 75%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      y: 0,
      duration: 0.8,
      stagger: 0.1,
      ease: "power3.out",
    });
  });
</script>
