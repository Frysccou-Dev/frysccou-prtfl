---
import { translations } from "../i18n/translations.js";
import { Coffee, ArrowRight } from "lucide-astro";
const t = translations.en;
---

<section id="donations" class="py-16 relative overflow-hidden">
  <div class="max-w-4xl mx-auto px-6 relative z-10">
    <div
      class="donation-card opacity-0 translate-y-10 group relative bg-white/60 backdrop-blur-xl rounded-[2.5rem] p-10 md:p-14 border border-white/50 shadow-2xl shadow-accent/10 hover:shadow-accent/20 transition-all duration-700 hover:-translate-y-2 overflow-hidden text-center"
    >
      <div
        class="absolute -top-24 -right-24 w-80 h-80 bg-accent/40 rounded-full blur-3xl group-hover:bg-accent/60 transition-colors duration-700"
      >
      </div>
      <div
        class="absolute -bottom-24 -left-24 w-80 h-80 bg-rose-accent/30 rounded-full blur-3xl group-hover:bg-rose-accent/50 transition-colors duration-700"
      >
      </div>

      <div class="relative z-10">
        <div
          class="mb-8 inline-flex items-center justify-center w-20 h-20 rounded-3xl bg-white shadow-xl shadow-accent/10 border border-accent/10 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-500"
        >
          <Coffee class="w-10 h-10 text-accent" />
        </div>

        <h2
          class="text-3xl md:text-4xl font-[Outfit] font-bold mb-4 text-text-primary"
          data-i18n="donations.title"
        >
          {t.donations.title}
        </h2>

        <p
          class="text-text-muted text-lg mb-10 max-w-sm mx-auto leading-relaxed"
          data-i18n="donations.description"
        >
          {t.donations.description}
        </p>

        <a
          href="https://link.mercadopago.com.ar/frysccoudev"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 px-10 py-5 bg-text-primary text-white rounded-2xl font-bold text-lg transition-all duration-300 hover:bg-accent hover:scale-105 hover:shadow-2xl hover:shadow-accent/40 group/btn"
        >
          <span data-i18n="donations.button">{t.donations.button}</span>
          <ArrowRight
            class="w-5 h-5 transition-transform duration-300 group-hover/btn:translate-x-1"
          />
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    gsap.to(".donation-card", {
      scrollTrigger: {
        trigger: "#donations",
        start: "top 85%",
        toggleActions: "play none none none",
      },
      opacity: 1,
      y: 0,
      duration: 1.2,
      ease: "power3.out",
    });
  });
</script>
