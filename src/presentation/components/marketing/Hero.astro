---
import { ArrowRight } from "lucide-react";
import ScrollReveal from "../ui/ScrollReveal";
---

<section class="relative pt-64 pb-40 overflow-hidden">
  <div class="max-w-6xl mx-auto px-6 relative z-10">
    <ScrollReveal client:load direction="up">
      <div class="flex items-center gap-4 mb-10">
        <div class="h-[1px] w-12 bg-primary"></div>
        <span
          class="text-[10px] font-black uppercase tracking-[0.3em] text-primary"
          >Astro 5 Blog Engine</span
        >
      </div>

      <h1
        class="text-6xl md:text-8xl lg:text-[10rem] font-display font-black leading-[0.85] tracking-tighter mb-16 uppercase"
      >
        Digital <br />
        <span class="text-white/10 outline-text">Anthology</span>
      </h1>

      <div
        class="flex flex-col md:flex-row md:items-end justify-between gap-12"
      >
        <p
          class="text-xl md:text-2xl text-surface-400 max-w-xl leading-snug font-medium italic"
        >
          High-performance minimalist blog for modern writers who value speed
          and clarity.
        </p>

        <a
          href="/blog"
          class="group flex items-center justify-center w-40 h-40 bg-primary hover:bg-white rounded-full transition-all duration-500 hover:rotate-12"
        >
          <div
            class="flex flex-col items-center gap-1 text-primary-foreground group-hover:text-black"
          >
            <span class="text-xs font-black uppercase tracking-widest"
              >Explore</span
            >
            <ArrowRight size={24} />
          </div>
        </a>
      </div>
    </ScrollReveal>
  </div>
</section>

<style>
  .outline-text {
    -webkit-text-stroke: 1px rgba(255, 255, 255, 0.2);
    color: transparent;
  }
</style>
