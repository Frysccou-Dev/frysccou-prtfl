---
import { ArrowUpRight } from "lucide-react";

interface Props {
  blog: {
    id: string;
    slug: string;
    title: string;
    description: string;
    date: Date;
    author: string;
    category: string;
    chaptersCount: number;
  };
}

const { blog } = Astro.props;
---

<a
  href={`/blog/${blog.slug}`}
  class="group block py-12 border-t border-white/5 first:border-t-0"
>
  <div class="flex flex-col md:flex-row md:items-center justify-between gap-8">
    <div class="flex-grow max-w-2xl">
      <div class="flex items-center gap-6 mb-6">
        <span
          class="text-[10px] font-black uppercase tracking-widest text-primary px-3 py-1 bg-primary/10 rounded-full"
        >
          {blog.category}
        </span>
        <span
          class="text-[10px] font-bold uppercase tracking-widest text-surface-400"
        >
          {blog.chaptersCount} Units
        </span>
      </div>

      <h3
        class="text-3xl md:text-5xl font-display font-medium mb-4 group-hover:text-primary transition-colors duration-500"
      >
        {blog.title}
      </h3>

      <p class="text-surface-400 text-lg leading-relaxed line-clamp-2 italic">
        {blog.description}
      </p>
    </div>

    <div
      class="shrink-0 flex items-center justify-center w-20 h-20 rounded-full border border-white/10 group-hover:bg-white group-hover:text-black transition-all duration-500 transform group-hover:rotate-45"
    >
      <ArrowUpRight size={32} />
    </div>
  </div>
</a>
