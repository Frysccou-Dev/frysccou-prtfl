---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import NavbarSales from "../components/sales/NavbarSales.astro";
import FooterSales from "../components/sales/FooterSales.astro";
import PageLoader from "../components/layout/PageLoader.astro";
import ThemeToggle from "../components/layout/ThemeToggle.astro";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Desarrollo web profesional en Argentina. Landing pages, e-commerce, web apps y sitios a medida. Transformo tu idea en una web que vende. Contactame."
    />
    <meta
      name="keywords"
      content="desarrollador web, programador, freelance, argentina, landing page, ecommerce, web app, full stack"
    />
    <meta
      property="og:title"
      content="Frysccou Dev - Desarrollo Web Profesional"
    />
    <meta
      property="og:description"
      content="Transformo tu idea en una web que vende. Landing pages, e-commerce y web apps a medida."
    />
    <meta property="og:image" content="/logo-brand.png" />
    <meta property="og:type" content="website" />
    <title>Francisco Esp√≠ndola - Full Stack Engineer | Webs que Venden</title>
    <link rel="icon" type="image/x-icon" href="/logo-brand.png" />
    <script is:inline>
      const setTheme = () => {
        const theme = localStorage.getItem("theme");
        if (
          theme === "dark" ||
          (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      };
      setTheme();
      document.addEventListener("astro:after-swap", setTheme);
    </script>
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col">
    <PageLoader lang="es" />
    <main class="flex-1 w-full">
      <div class="ocean-bg">
        <NavbarSales />
        <slot />
        <FooterSales />
      </div>
    </main>
    <ThemeToggle />
  </body>
</html>
